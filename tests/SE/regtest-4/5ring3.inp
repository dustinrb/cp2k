      H   -0.1676 2.1961   -0.4840
      H   -1.9085 0.5740   -0.8546
      H   -1.9140 0.3795   0.9017
      H   -0.7123 -1.4222 -1.2097
      H   -1.1952 -1.8702 0.4367
      H   1.4661   -1.7529 -0.1439
      H   0.9110   -0.9823 1.3629
      H   1.2916   0.4233   -1.3531
      H   2.1199   0.8453   0.1649
