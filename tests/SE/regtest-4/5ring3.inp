&GLOBAL
  ECHO_INPUT
  PRINT_LEVEL LOW
  PROGRAM CP2K
  PROJECT colvar
  RUN_TYPE md
&END GLOBAL

&MOTION
  &FREE_ENERGY
    &METADYN
      DO_HILLS T
      NT_HILLS 1
      WW 5.0e-3
      &METAVAR
        COLVAR 1
        SCALE 0.1
      &END METAVAR
      &PRINT
        &COLVAR
          COMMON_ITERATION_LEVELS 10
          &EACH
            METADYNAMICS 1
          &END EACH
        &END COLVAR
        &HILLS
          COMMON_ITERATION_LEVELS 10
          &EACH
            METADYNAMICS 1
          &END EACH
        &END HILLS
      &END PRINT
    &END METADYN
  &END FREE_ENERGY
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 300
    TIMESTEP 0.3
    &PRINT
      &ENERGY
      &END ENERGY
    &END PRINT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &QS
      METHOD PM3
      &SE
      &END SE
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 50
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER NONE
      &END OT
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 15.0 15.0 15.0
      PERIODIC NONE
    &END CELL
    &COLVAR
      &RING_PUCKERING
        ATOMS 3 4 5 1 2
        COORDINATE -2
      &END RING_PUCKERING
    &END COLVAR
