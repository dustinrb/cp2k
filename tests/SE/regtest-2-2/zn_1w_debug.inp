&GLOBAL
  PRINT_LEVEL LOW
  PROJECT zn_1w_debug
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DX 0.001
&END DEBUG

&FORCE_EVAL
  METHOD QS
  &DFT
    CHARGE 2
    MULTIPLICITY 1
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
      METHOD PM6
      &SE
        &COULOMB
          RC_RANGE [bohr] 10.0
        &END COULOMB
        &EXCHANGE
          RC_RANGE 10.0
          RC_TAPER [bohr] 24.0
        &END EXCHANGE
      &END SE
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 50
      SCF_GUESS mopac
      &MIXING
        ALPHA 0.1
        METHOD DIRECT_P_MIXING
      &END MIXING
      &OT ON
        MINIMIZER CG
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END OUTER_SCF
      &PRINT
        &RESTART OFF
        &END RESTART
        &RESTART_HISTORY OFF
        &END RESTART_HISTORY
      &END PRINT
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 15.0 15.0 15.0
    &END CELL
    &KIND H
      BASIS_SET TZV2P-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET TZV2P-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Zn
      BASIS_SET TZV-GTH-q12-confined
      POTENTIAL GTH-PBE-q12
    &END KIND
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/ref_geos.xyz
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
