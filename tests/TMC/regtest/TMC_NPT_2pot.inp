# two potential (Nested Monte Carlo) with volume moves
&GLOBAL
  PRINT_LEVEL LOW
  PROGRAM TMC
  PROJECT H2O_TMC
  RUN_TYPE TMC
  #TRACE
  WALLTIME 00:01:30
&END GLOBAL

&MOTION
  &TMC
    ENERGY_FILE_NAME H2O_ice.inp
    GROUP_CC_SIZE 0
    GROUP_ENERGY_NR 1
    GROUP_ENERGY_SIZE 1
    INFO_OUT_STEP_SIZE 100
    NUM_MC_ELEM 20
    NUM_MV_ELEM_IN_CELL 1
    PRESSURE 0.01
    PRINT_TEST_OUTPUT
    RESTART_OUT 0
    RND_DETERMINISTIC 42
    TEMPERATURE 270
    &NMC_MOVES
      NMC_FILE_NAME H2O_ice_2.inp
      NR_NMC_STEPS 2
      &MOVE_TYPE ATOM_TRANS
        INIT_ACC_PROB 0.2
        PROB 1
        SIZE 0.1
      &END MOVE_TYPE
      &MOVE_TYPE VOL_MOVE
        PROB 4
        SIZE 0.1
      &END MOVE_TYPE
    &END NMC_MOVES
  &END TMC
&END MOTION
