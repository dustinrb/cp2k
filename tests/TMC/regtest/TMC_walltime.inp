# calculation should last longer than entered walltime
# program should finalize without errors
&GLOBAL
  PRINT_LEVEL LOW
  PROGRAM TMC
  PROJECT H2O_TMC
  RUN_TYPE TMC
  #TRACE
  WALLTIME 00:00:23
&END GLOBAL

&MOTION
  &TMC
    ENERGY_FILE_NAME H2O.inp
    ESIMATE_ACC_PROB .TRUE.
    GROUP_CC_SIZE 0
    GROUP_ENERGY_NR 1
    GROUP_ENERGY_SIZE 1
    INFO_OUT_STEP_SIZE 100
    NUM_MC_ELEM 1000000
    NUM_MV_ELEM_IN_CELL 1
    PRINT_ONLY_ACC .TRUE.
    PRINT_TEST_OUTPUT
    RESTART_OUT 0
    RND_DETERMINISTIC 42
    TEMPERATURE 330
    &MOVE_TYPE ATOM_TRANS
      INIT_ACC_PROB 0.2
      SIZE 0.5
    &END MOVE_TYPE
  &END TMC
&END MOTION
