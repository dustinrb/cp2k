#CPQA DEPENDS argon-ref.inp
#CPQA INCLUDE argon-fit.inp
&GLOBAL
  PROGRAM OPTIMIZE_INPUT
  PROJECT FITIT
  RUN_TYPE NONE
  SEED 1
&END GLOBAL

&OPTIMIZE_INPUT
  ACCURACY 0.0002
  MAX_FUN 11
  METHOD FORCE_MATCHING
  ! will be randomized by 10%
  RANDOMIZE_VARIABLES 10
  STEP_SIZE 0.5
  &FORCE_MATCHING
    GROUP_SIZE 2
    OPTIMIZE_FILE_NAME argon-fit.inp
    REF_CELL_FILE_NAME REF-1.cell
    REF_FORCE_FILE_NAME REF-frc-1.xyz
    REF_TRAJ_FILE_NAME REF-pos-1.xyz
    SHIFT_MM 0.0
    SHIFT_QM 0.0
    &COMPARE_ENERGIES
      &EACH
        POWELL_OPT 5
      &END EACH
    &END COMPARE_ENERGIES
  &END FORCE_MATCHING
  &HISTORY
    &EACH
      POWELL_OPT 5
    &END EACH
  &END HISTORY
  &RESTART
    &EACH
      POWELL_OPT 5
    &END EACH
  &END RESTART
  &VARIABLE
    LABEL PRM01
    VALUE 119.8
  &END VARIABLE
  &VARIABLE
    LABEL PRM02
    VALUE 3.4
  &END VARIABLE
&END OPTIMIZE_INPUT
