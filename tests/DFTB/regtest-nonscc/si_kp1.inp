@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &KPOINTS
      EPS_GEO 1.e-8
      FULL_GRID ON
      PARALLEL_GROUP_SIZE 0
      SCHEME MONKHORST-PACK 4 4 4
      SYMMETRY ON
      VERBOSE T
    &END KPOINTS
    &QS
      EXTRAPOLATION USE_GUESS
      METHOD DFTB
      &DFTB
        DISPERSION T
        ORTHOGONAL_BASIS F
        SELF_CONSISTENT F
        &PARAMETER
          PARAM_FILE_NAME nonscc_parameter
          PARAM_FILE_PATH DFTB/nonscc
          SK_FILE Si Si sisi-d
          UFF_FORCE_FIELD ../uff_table
        &END PARAMETER
      &END DFTB
    &END QS
    &SCF
      SCF_GUESS NONE
      &MIXING
        ALPHA 1.
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
      SCALED
      Si     0.000000    0.000000    0.000000
      Si     0.500000    0.500000    0.000000
      Si     0.500000    0.000000    0.500000
      Si     0.000000    0.500000    0.500000
      Si     0.250000    0.250000    0.250000
      Si     0.250000    0.750000    0.750000
      Si     0.750000    0.250000    0.750000
      Si     0.750000    0.750000    0.250000
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL high
  PROJECT Si
  RUN_TYPE ENERGY
&END GLOBAL
