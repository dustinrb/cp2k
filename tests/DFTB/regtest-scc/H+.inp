&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H+
  RUN_TYPE ENERGY
&END GLOBAL

#CPQA INCLUDE DFTB/scc/scc_parameter
#CPQA INCLUDE ../uff_table
#CPQA INCLUDE DFTB/scc/hh.spl
&FORCE_EVAL
  &DFT
    CHARGE +1
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER ANALYTIC
      &EWALD
        ALPHA 0.35
        EWALD_TYPE SPME
        GMAX 100
      &END EWALD
    &END POISSON
    &QS
      METHOD DFTB
      &DFTB
        DISPERSION F
        DO_EWALD T
        SELF_CONSISTENT T
        &PARAMETER
          PARAM_FILE_NAME scc_parameter
          PARAM_FILE_PATH DFTB/scc
          UFF_FORCE_FIELD ../uff_table
        &END PARAMETER
      &END DFTB
    &END QS
    &SCF
      MAX_SCF 20
      SCF_GUESS CORE
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    &COORD
      H     10. 10. 10.
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
