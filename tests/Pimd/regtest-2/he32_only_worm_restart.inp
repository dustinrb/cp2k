#CPQA DEPENDS he32_only.inp
&GLOBAL
  PRINT_LEVEL low
  PROJECT_NAME he32_only_worm_restart
  RUN_TYPE PINT
&END GLOBAL

&EXT_RESTART
  RESTART_COUNTERS
  RESTART_DEFAULT F
  RESTART_FILE_NAME he32_only_worm-1.restart
  RESTART_HELIUM_PERMUTATION
  RESTART_HELIUM_POS
  RESTART_HELIUM_RNG
&END EXT_RESTART

&MOTION
  &PINT
    NUM_STEPS 1
    &HELIUM
      CELL_SHAPE OCTAHEDRON
      HELIUM_ONLY
      INOROT 40
      IROT 20
      NATOMS 32
      NBEADS 25
      NUM_ENV 2
      PERIODIC T
      POTENTIAL_FILE_NAME lj-test-pot.dat
      SAMPLING_METHOD WORM
      &WORM
        ALLOW_OPEN T
        CENTROID_DRMAX 0.2
        CENTROID_WEIGHT 5
        CRAWL_REPETITION 2
        CRAWL_WEIGHT 10
        HEAD_TAIL_WEIGHT 10
        OPEN_CLOSE_SCALE 10.0
        OPEN_CLOSE_WEIGHT 20
        SHOW_STATISTICS T
        STAGING_L 5
        STAGING_WEIGHT 10
        SWAP_WEIGHT 100
      &END WORM
    &END HELIUM
  &END PINT
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../../Fist/sample_pot/water.pot
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        GMAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT PDB
      COORD_FILE_NAME ../../Fist/sample_pdb/water_1.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
