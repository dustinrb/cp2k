    ECOUPL COULOMB
    USE_GEEP_LIB 12
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &PRINT
      &QMMM_MATRIX
      &END QMMM_MATRIX
    &END PRINT
    &QM_KIND H
      MM_INDEX 1
    &END QM_KIND
  &END QMMM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &COORD
      H     3.000000     0.8     4.000000  MOL1
      H     3.000000     0.8     1.000000  MOL1
    &END COORD
    &KIND H
      CORE_CORRECTION 1.0
      ELEMENT H
    &END KIND
    &TOPOLOGY
      CONNECTIVITY OFF
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
