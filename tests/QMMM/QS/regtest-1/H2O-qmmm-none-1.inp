&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2O-qmmm-none-1
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 3
    OPTIMIZER BFGS
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD QMMM
  &DFT
    BASIS_SET_FILE_NAME ../BASIS_SET
    POTENTIAL_FILE_NAME ../POTENTIAL
    &MGRID
      COMMENSURATE
      CUTOFF 50
    &END MGRID
    &QS
    &END QS
    &SCF
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/2H2O.pot
      &SPLINE
        RCUT_NB 5.2917720830
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE spme
        GMAX 64
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &QMMM
    ECOUPL NONE
    MM_POTENTIAL_FILE_NAME ../MM_POTENTIAL
    NOCOMPATIBILITY
    &CELL
      ABC 7.0 7.0 7.0
    &END CELL
    &QM_KIND H
      MM_INDEX 5 6
    &END QM_KIND
    &QM_KIND O
      MM_INDEX 4
    &END QM_KIND
    #
    # QM_KINDS
    #
  &END QMMM
  &SUBSYS
    &CELL
      ABC 20.00 20.00 20.00
    &END CELL
    &KIND H
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &TOPOLOGY
      CONNECTIVITY UPSF
      CONN_FILE_NAME ../sample_psf/2H2O.psf
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/2H2O.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
