&GLOBAL
  IOLEVEL MEDIUM
  PROJECT acn-qmmm-re
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QMMM
  &DFT
    BASIS_SET_FILE_NAME ../GTH_BASIS_SETS
    CHARGE -1
    MULTIPLICITY 1
    POTENTIAL_FILE_NAME ../POTENTIAL
    &MGRID
      COMMENSURATE
      CUTOFF 200
      NGRIDS 3
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
      &OT ON
        PRECONDITIONER FULL_SINGLE
      &END OT
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV SPLINE2
        XC_SMOOTH_RHO NN50
      &END XC_GRID
    &END XC
  &END DFT
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/acn.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE SPME
        GMAX 32
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &QMMM
    CENTER SETUP_ONLY
    ECOUPL GAUSS
    MM_POTENTIAL_FILE_NAME ../MM_POTENTIAL
    NOCOMPATIBILITY
    USE_GEEP_LIB 8
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &MM_KIND HC
      RADIUS 0.54
    &END MM_KIND
    &MM_KIND YC
      RADIUS 0.73
    &END MM_KIND
    &MM_KIND YN
      RADIUS 0.73
    &END MM_KIND
    &MM_KIND CT
      RADIUS 0.73
    &END MM_KIND
    &PERIODIC
      GMAX 0.1
      &MULTIPOLE
        EWALD_PRECISION 0.000001
        RCUT 30.0
      &END MULTIPOLE
    &END PERIODIC
    &PRINT
      &PERIODIC_INFO
      &END PERIODIC_INFO
    &END PRINT
    &QM_KIND Cl
      MM_INDEX 7
    &END QM_KIND
  &END QMMM
  &SUBSYS
    &CELL
      ABC 14. 14. 14.
    &END CELL
    &KIND Cl
      BASIS_SET TZV2P-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
    &TOPOLOGY
      CHARGE_OCCUP
      CONNECTIVITY GENERATE
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/solvated_system.pdb
      MOL_CHECK
      &DUMP_PDB
      &END DUMP_PDB
      &DUMP_PSF
      &END DUMP_PSF
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
