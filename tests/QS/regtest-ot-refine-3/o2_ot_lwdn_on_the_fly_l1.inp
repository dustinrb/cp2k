&GLOBAL
  PRINT_LEVEL LOW
  PROJECT o2_ot_lwdn_on_the_fly_l1
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    LSD
    MULTIP 3
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 8
      SCF_GUESS ATOMIC
      &OT
        ALGORITHM IRAC
        EPS_IRAC_SWITCH 0.0E0
        MINIMIZER CG
        ON_THE_FLY_LOC T
        ORTHO_IRAC POLY
        PRECONDITIONER FULL_KINETIC
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.00 4.00 4.00
    &END CELL
    &COORD
      O           0.000000  0.000000  0.608000
      O           0.000000  0.000000 -0.608000
    &END COORD
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
