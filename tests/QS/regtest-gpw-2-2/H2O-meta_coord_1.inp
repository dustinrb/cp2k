&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HALF_1
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &FREE_ENERGY
    &METADYN
      DO_HILLS
      NT_HILLS 2
      WW 1.0e-3
      &METAVAR
        COLVAR 1
        SCALE 0.02
      &END METAVAR
      &PRINT
        &COLVAR
          COMMON_ITERATION_LEVELS 3
        &END COLVAR
        &HILLS
          COMMON_ITERATION_LEVELS 3
        &END HILLS
      &END PRINT
    &END METADYN
  &END FREE_ENERGY
  &MD
    ENSEMBLE NVT
    STEPS 5
    TEMPERATURE 300.0
    TIMESTEP 0.5
    &THERMOSTAT
      &NOSE
        LENGTH 3
        MTS 2
        TIMECON 100.0
        YOSHIDA 3
      &END NOSE
    &END THERMOSTAT
  &END MD
  &PRINT
    &RESTART
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
    &END QS
    &SCF
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COLVAR
      &COORDINATION
        ATOMS_FROM 1
        ATOMS_TO 2 3
        R_0 2.3
      &END COORDINATION
    &END COLVAR
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
