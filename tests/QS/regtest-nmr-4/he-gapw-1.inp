&GLOBAL
  PRINT_LEVEL LOW
  PROJECT he-gapw-1
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 10
      PRECONDITIONER FULL_ALL
      &CURRENT
        GAUGE R_AND_STEP_FUNCTION
      &END CURRENT
      &LOCALIZE
      &END LOCALIZE
      &NMR
        &PRINT
          &CHI_TENSOR
          &END CHI_TENSOR
        &END PRINT
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      HE   0.000000    0.000000   0.000000
    &END COORD
    &KIND HE
      BASIS_SET 6-31G**
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
