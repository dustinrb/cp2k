&GLOBAL
  PRINT_LEVEL LOW
  PROJECT SiH4-PBE0-admm-pseudo
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  &DFT
    AUTO_BASIS RI_XAS MEDIUM
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_ADMM
    POTENTIAL_FILE_NAME POTENTIAL
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD MO_DIAG
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      &OT
        ENERGY_GAP 0.01
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XAS_TDP
      DIPOLE_FORM LENGTH
      GRID Si 150 150
      TAMM_DANCOFF
      &DONOR_STATES
        DEFINE_EXCITED BY_KIND
        KIND_LIST Si
        N_SEARCH 5
        STATE_TYPES 1s
        STATE_TYPES 2s
      &END DONOR_STATES
      &KERNEL
        &EXACT_EXCHANGE
          FRACTION 0.25
          OPERATOR COULOMB
        &END EXACT_EXCHANGE
        &XC_FUNCTIONAL
          &GGA_C_PBE
          &END GGA_C_PBE
          &GGA_X_PBE
            SCALE 0.75
          &END GGA_X_PBE
        &END XC_FUNCTIONAL
      &END KERNEL
    &END XAS_TDP
    &XC
      &HF
        FRACTION 0.25
      &END HF
      &XC_FUNCTIONAL PBE
        &PBE
          SCALE_C 1.0
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      Si   0.000000    0.000000    0.000000
      H    0.853686    0.853686    0.853686
      H   -0.853686   -0.853686    0.853686
      H   -0.853686    0.853686   -0.853686
      H    0.853686   -0.853686   -0.853686
    &END COORD
    &KIND Si
      BASIS_SET Ahlrichs-def2-SVP
      BASIS_SET AUX_FIT Ahlrichs-def2-SVP
      POTENTIAL ALL
    &END KIND
    &KIND H
      BASIS_SET SZV-MOLOPT-SR-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
