&GLOBAL
  PRINT_LEVEL LOW
  PROJECT 2H2O
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &ENERGY_CORRECTION
      HARRIS_BASIS HARRIS
      MAO
      MAO_EPS_GRAD 1.e-4
      MAO_MAX_ITER 300
      &XC
        &XC_FUNCTIONAL
          &PBE
          &END PBE
        &END XC_FUNCTIONAL
      &END XC
    &END ENERGY_CORRECTION
    &KG_METHOD
      &XC
        &XC_FUNCTIONAL
          &TF
          &END TF
        &END XC_FUNCTIONAL
      &END XC
    &END KG_METHOD
    &LS_SCF
      EPS_FILTER 1.0E-6
      EPS_SCF 1.0E-7
      MAX_SCF 40
      MU -0.1
      PURIFICATION_METHOD TRS4
    &END LS_SCF
    &MGRID
      CUTOFF 200
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.E-10
      EPS_KG_ORB 1.0E-5
      KG_METHOD
      LS_SCF
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 7.0 7.0 7.0
    &END CELL
    &COORD
      O     0.000000     0.000000     0.000000    H2O1
      H     0.000000     0.000000     1.000000    H2O1
      H     0.942809     0.000000    -0.333333    H2O1
      O    -1.617979    -0.948062    -2.341650    H2O2
      H    -2.529195    -1.296822    -2.122437    H2O2
      H    -1.534288    -0.833088    -3.331486    H2O2
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-GTH-BLYP
      BASIS_SET HARRIS TZVDD3DF3PD-GTH-BLYP
      MAO 1
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-GTH-BLYP
      BASIS_SET HARRIS TZVDD3DF3PD-GTH-BLYP
      MAO 4
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
