&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O_KSH_MO_an
  RUN_TYPE CELL_OPT
&END GLOBAL

&MOTION
  &CELL_OPT
    MAX_ITER 0
  &END CELL_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &ENERGY_CORRECTION
      ALGORITHM DIAGONALIZATION
      ENERGY_FUNCTIONAL HARRIS
      EPS_DEFAULT 1.0E-6
      EPS_FILTER 1.0E-8
      HARRIS_BASIS HARRIS
      &RESPONSE_SOLVER
        EPS 1.0E-6
        EPS_FILTER 1.0E-8
        MATRIX_CLUSTER_TYPE MOLECULAR
        METHOD MO_SOLVER
        PRECONDITIONER FULL_ALL
        S_PRECONDITIONER MOLECULAR
      &END RESPONSE_SOLVER
      &XC
        &XC_FUNCTIONAL
          &PBE
          &END PBE
        &END XC_FUNCTIONAL
      &END XC
    &END ENERGY_CORRECTION
    &MGRID
      CUTOFF 50
      REL_CUTOFF 20
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC [angstrom] 6.0000 6.0000 6.0000
    &END CELL
    &COORD
      O       0.000000    0.000000    -0.211000
      H       0.000000   -0.844000     0.495000
      H       0.000000    0.744000     0.495000
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      BASIS_SET HARRIS DZVP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH
      BASIS_SET HARRIS DZVP-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
