&GLOBAL
  PROJECT C-sic-1
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      &OT
        ROTATION
      &END OT
    &END SCF
    &SIC
      ORBITAL_SET ALL
      SIC_METHOD EXPLICIT_ORBITALS
      SIC_SCALING_A 0.2
      SIC_SCALING_B 0.2
    &END SIC
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      C   0.000000  0.000000  0.000000
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
