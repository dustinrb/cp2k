&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT N3
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
    &END MGRID
    &PRINT
      &DFT_CONTROL_PARAMETERS
      &END DFT_CONTROL_PARAMETERS
    &END PRINT
    &QS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &PRINT
        &RESTART
          FILENAME =RESTART
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 5.0 5.0
    &END CELL
    &COORD
      N 0.0 0.0 0.0
      N -1.19 0.0 0.0
      N +1.19 0.0 0.0
    &END COORD
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
