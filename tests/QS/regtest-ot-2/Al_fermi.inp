&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Al_fermi
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    STEPS 3
    TEMPERATURE 500
    TIMESTEP 0.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 40
    &END MGRID
    &PRINT
      &MO
        EIGENVALUES
        MO_RANGE 1 15
        NDIGITS 12
        OCCUPATION_NUMBERS
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      ADDED_MOS 12
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.3
        METHOD DIRECT_P_MIXING
      &END MIXING
      &SMEAR
        ELECTRONIC_TEMPERATURE 3000
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      Al        -0.4201082476       -0.4201082770       -0.4201082658
      Al         2.1120503717        0.1540265147        0.1540265525
      Al         0.1540266214        2.1120506065        0.1540265605
      Al         0.1540266183        0.1540265196        2.1120505165
    &END COORD
    &KIND Al
      BASIS_SET DZVP-GTH-PADE-CONFINED
      POTENTIAL GTH-PADE-q3
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
