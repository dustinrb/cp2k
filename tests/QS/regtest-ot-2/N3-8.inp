  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    WFN_RESTART_FILE_NAME RESTART
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 1
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS RESTART
      &OT ON
      &END OT
    &END SCF
    &SIC
      SIC_METHOD AD
    &END SIC
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 5.0 5.0
    &END CELL
    &COORD
      N 0.0 0.0 0.0
      N -1.19 0.0 0.0
      N +1.19 0.0 0.0
    &END COORD
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
