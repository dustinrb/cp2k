&GLOBAL
  PRINT_LEVEL LOW
  PROJECT C_ot
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      ADDED_MOS 4
      EPS_SCF 1.0E-5
      MAX_SCF 30
      SCF_GUESS RANDOM
      &OT OFF
        ROTATION
      &END OT
      &OUTER_SCF OFF
        EPS_SCF 1.0E-5
        MAX_SCF 1000
      &END OUTER_SCF
      &SMEAR
        LIST 2.0 0.66666666666666666 0.6666666666666666666 0.666666666666666666 0.0 0.0
        METHOD LIST
      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &GRID_INFORMATION ON
    &END GRID_INFORMATION
  &END PRINT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      C   0.000000  0.000000  0.000000
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
