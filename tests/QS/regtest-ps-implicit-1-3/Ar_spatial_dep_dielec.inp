# implicit Poisson solver with spatially dependent dielectric constant
&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT Ar_spatial_dep_dielec
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-7
      EPS_SCF 1.0E-7
      MAX_SCF 30
      MIXING_FRACTION 0.45
      MU -0.20
      PERFORM_MU_SCAN off
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES off
      S_PRECONDITIONER NONE
    &END LS_SCF
    &MGRID
      CUTOFF 200
      NGRIDS 4
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &POISSON
      POISSON_SOLVER IMPLICIT
      &IMPLICIT
        BOUNDARY_CONDITIONS PERIODIC
        MAX_ITER 300
        OR_PARAMETER 1.0E-00
        TOL 1.0E-5
        &DIELECTRIC
          DERIVATIVE_METHOD cd5
          DIELECTRIC_CONSTANT 1.5
          DIELECTRIC_FUNCTION_TYPE spatially_dependent
          RHO_MAX 1.0E-3
          RHO_MIN 1.0E-4
          &DIELEC_AA_CUBOIDAL
            EPSILON 4.0
            SMOOTHING_WIDTH 1.0
            X_XTNT 0.5 7.5
            Y_XTNT 0.5 7.5
            Z_XTNT 0.5 1.5
          &END DIELEC_AA_CUBOIDAL
          &DIELEC_XAA_ANNULAR
            BASE_CENTER 4.0 4.0
            BASE_RADII 2.0 0.0
            EPSILON 2.5
            SMOOTHING_WIDTH 0.5
            X_XTNT 0.5 7.5
          &END DIELEC_XAA_ANNULAR
        &END DIELECTRIC
      &END IMPLICIT
    &END POISSON
    &PRINT
      &IMPLICIT_PSOLVER
        &DIELECTRIC_CUBE off
          STRIDE 1 1 1
        &END DIELECTRIC_CUBE
      &END IMPLICIT_PSOLVER
      &V_HARTREE_CUBE off
        STRIDE 1 1 1
      &END V_HARTREE_CUBE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
      EPS_FILTER_MATRIX 0.1
      LS_SCF off
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 31
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 50
      &END OUTER_SCF
      &PRINT
        &RESTART off
          BACKUP_COPIES 0
          &EACH
            QS_SCF 10
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COORD
      Ar        4.0000000000        4.0000000000        4.0000000000
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q8
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
