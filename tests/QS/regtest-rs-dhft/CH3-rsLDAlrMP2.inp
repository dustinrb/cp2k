@SET MY_OMEGA 0.5
&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT CH3-rsLDAlrMP2.inp
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.01
  &END TIMINGS
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    UKS
    &MGRID
      CUTOFF 100
      REL_CUTOFF 20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &INTERACTION_POTENTIAL
          OMEGA ${MY_OMEGA}
          POTENTIAL_TYPE LONGRANGE
        &END INTERACTION_POTENTIAL
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &WF_CORRELATION
        MEMORY 200.
        NUMBER_PROC 1
        &INTEGRALS
          &INTERACTION_POTENTIAL
            OMEGA ${MY_OMEGA}
            POTENTIAL_TYPE LONGRANGE
          &END INTERACTION_POTENTIAL
          &WFC_GPW
            CUTOFF 50
            REL_CUTOFF 10
          &END WFC_GPW
        &END INTEGRALS
        &RI
          DO_SVD
        &END RI
        &RI_MP2
        &END RI_MP2
      &END WF_CORRELATION
      &XC_FUNCTIONAL
        &LDA_C_PMGB06
          SCALE -1.0
          _OMEGA ${MY_OMEGA}
        &END LDA_C_PMGB06
        &LDA_C_PW
        &END LDA_C_PW
        # LDA_X_ERF is the short-range part of the functional
        &LDA_X_ERF
          _OMEGA ${MY_OMEGA}
          SCALE 1.0
        &END LDA_X_ERF
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 6.000 6.000 6.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_FORMAT xyz
      COORD_FILE_NAME CH3.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
