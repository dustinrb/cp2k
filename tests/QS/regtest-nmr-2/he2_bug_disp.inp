@SET MULTIPLICITY  1
@SET BASIS_SET 3-21G*
@SET BASIS_SET_H 3-21G*
@SET BASIS_SET_FILE EMSL_BASIS_SETS
@SET POTENTIAL_FILE POTENTIAL
&GLOBAL
  PRINT_LEVEL LOW
  PROJECT he2_bug_disp
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME ${BASIS_SET_FILE}
    POTENTIAL_FILE_NAME ${POTENTIAL_FILE}
    &MGRID
      CUTOFF 80
      NGRIDS 2
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 5
      SCF_GUESS ATOMIC
      &OT
        ALGORITHM IRAC
        MINIMIZER DIIS
        PRECONDITIONER FULL_KINETIC
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      EPS 1E-6
      PRECONDITIONER FULL_ALL
      &CURRENT
        COMMON_CENTER 0.0 0.0 0.0
        GAUGE ATOM
        GAUGE_ATOM_RADIUS 4.0
        ORBITAL_CENTER COMMON
        USE_OLD_GAUGE_ATOM F
      &END CURRENT
      &LOCALIZE
      &END LOCALIZE
      &NMR
        INTERPOLATE_SHIFT T
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      # need this box size
      ABC 5.0 5.0 10.0
    &END CELL
    &COORD
      he 0 0 0
      he 2.5 0 0
    &END COORD
    &KIND He
      BASIS_SET ${BASIS_SET}
      LEBEDEV_GRID 50
      POTENTIAL ALL
      RADIAL_GRID 100
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
