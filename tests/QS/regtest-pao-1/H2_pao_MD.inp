&GLOBAL
  PROJECT H2_pao_MD
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 5
    TEMPERATURE 300
    TIMESTEP 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_SCF 1.0E-8
      EXTRAPOLATION_ORDER 4
      MAX_SCF 25
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES OFF
      S_PRECONDITIONER NONE
      &PAO
        EPS_PAO 1.0E-5
        LINPOT_REGULARIZATION_STRENGTH 0.0
        MAX_PAO 50
        PARAMETERIZATION ROTINV
        PENALTY_STRENGTH 0.0
        REGULARIZATION 0.0
        RESTART_FILE H2_pao_rotinv-1_0.pao
        &LINE_SEARCH
          METHOD ADAPT
        &END LINE_SEARCH
      &END PAO
    &END LS_SCF
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      LS_SCF
    &END QS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      H       0.72  0.0   0.0
      H       0.0   0.0   0.0
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      PAO_BASIS_SIZE 1
      POTENTIAL GTH-PBE
      &PAO_POTENTIAL
        MAXL 0
      &END PAO_POTENTIAL
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
