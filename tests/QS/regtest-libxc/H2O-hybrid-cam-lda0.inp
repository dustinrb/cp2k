&GLOBAL
  #  TRACE
  PRINT_LEVEL MEDIUM
  PROJECT H2O-hybrid-cam-lda0
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 250
      REL_CUTOFF 50
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      DENSITY_CUTOFF 1.0e-9
      DENSITY_SMOOTH_CUTOFF_RANGE 0
      FUNCTIONAL_ROUTINE DEFAULT
      &HF
        FRACTION 1.0
        &INTERACTION_POTENTIAL
          OMEGA 0.333333333333
          POTENTIAL_TYPE MIX_CL
          SCALE_COULOMB 0.25
          SCALE_LONGRANGE 0.5
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 5
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &HYB_LDA_XC_CAM_LDA0
        &END HYB_LDA_XC_CAM_LDA0
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
