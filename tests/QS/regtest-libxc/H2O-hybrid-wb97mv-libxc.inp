&GLOBAL
  #  TRACE
  PRINT_LEVEL MEDIUM
  PROJECT H2O-hybrid-wb97mv_libxc
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      REL_CUTOFF 50
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 1.000
        &INTERACTION_POTENTIAL
          OMEGA 0.30
          POTENTIAL_TYPE MIX_CL
          SCALE_COULOMB 0.15
          SCALE_LONGRANGE 0.85
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 10
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-6
        &END SCREENING
      &END HF
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL NON_LOCAL
        &NON_LOCAL
          CUTOFF 30
          KERNEL_FILE_NAME rVV10_kernel_table.dat
          PARAMETERS 6.0 0.01
          TYPE RVV10
          VERBOSE_OUTPUT
        &END NON_LOCAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL
        &HYB_MGGA_XC_WB97M_V
        &END HYB_MGGA_XC_WB97M_V
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
