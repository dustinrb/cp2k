&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H-extpot
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    POTENTIAL_FILE_NAME POTENTIAL
    &EXTERNAL_POTENTIAL
      FUNCTION A
      PARAMETERS A
      VALUES [eV] 10.0
    &END EXTERNAL_POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &PRINT
      &DERIVATIVES
      &END DERIVATIVES
    &END PRINT
    &QS
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      H   0.000000    0.000000    0.000000
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
