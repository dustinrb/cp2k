&GLOBAL
  PRINT_LEVEL DEBUG
  PROJECT H2O-debug-4
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
    TEMPERATURE 300.0
    TIMESTEP 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &LOCALIZE T
      &PRINT
        &MOLECULAR_DIPOLES
          COMMON_ITERATION_LEVELS 2
          PERIODIC
        &END MOLECULAR_DIPOLES
        &TOTAL_DIPOLE
          COMMON_ITERATION_LEVELS 2
          PERIODIC T
          REFERENCE COAC
        &END TOTAL_DIPOLE
        &WANNIER_CENTERS
          FORMAT XMOL
          IONS+CENTERS
        &END WANNIER_CENTERS
      &END PRINT
    &END LOCALIZE
    &MGRID
      CUTOFF 50
    &END MGRID
    &PRINT
    &END PRINT
    &QS
      EXTRAPOLATION USE_PREV_WF
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
