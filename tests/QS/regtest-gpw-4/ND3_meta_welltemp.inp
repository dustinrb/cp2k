&GLOBAL
  PREFERRED_FFT_LIBRARY FFTW
  PRINT_LEVEL LOW
  PROJECT ND3_meta_welltemp
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &FREE_ENERGY
    &METADYN
      DELTA_T 200
      DO_HILLS
      NT_HILLS 2
      WELL_TEMPERED
      WW 0.0005
      &METAVAR
        COLVAR 1
        SCALE 0.02
      &END METAVAR
      &PRINT
        &COLVAR
          COMMON_ITERATION_LEVELS 3
          FILENAME __STD_OUT__
        &END COLVAR
        &HILLS
          COMMON_ITERATION_LEVELS 3
          FILENAME __STD_OUT__
        &END HILLS
      &END PRINT
    &END METADYN
  &END FREE_ENERGY
  &MD
    ENSEMBLE NVT
    STEPS 5
    TEMPERATURE 100.0
    TIMESTEP 0.5
    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON 50
      &END CSVR
    &END THERMOSTAT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 80
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 0
    &END QS
    &SCF
      EPS_SCF 5.0E-5
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 4
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COLVAR
      &DISTANCE_POINT_PLANE
        ATOMS_PLANE 2 3 4
        ATOM_POINT 1
      &END DISTANCE_POINT_PLANE
    &END COLVAR
    &COORD
      N    0.0000000000000000E+00    0.0000000000000000E+00    0.0000000000000000E+00
      H    8.4032225784457832E-01   -4.5950154622830883E-01   -4.5632591618228799E-01
      H   -8.4032225822139406E-01   -4.5950154185821477E-01   -4.5632591850604003E-01
      H    6.1387629414834120E-08    9.6279739150716512E-01   -4.5305307341662493E-01
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      MASS 2
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
    &PRINT
      &CELL
      &END CELL
      &KINDS
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
