&GLOBAL
  PREFERRED_FFT_LIBRARY FFTW
  PRINT_LEVEL LOW
  PROJECT 2H2O_meta_welltemp
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &FREE_ENERGY
    &METADYN
      DO_HILLS
      NT_HILLS 2
      WW 0.0001
      &METAVAR
        COLVAR 1
        SCALE 0.0003
      &END METAVAR
      &METAVAR
        COLVAR 2
        SCALE 0.03
      &END METAVAR
      &PRINT
        &COLVAR
          COMMON_ITERATION_LEVELS 3
          FILENAME __STD_OUT__
        &END COLVAR
        &HILLS
          COMMON_ITERATION_LEVELS 3
          FILENAME __STD_OUT__
        &END HILLS
      &END PRINT
    &END METADYN
  &END FREE_ENERGY
  &MD
    ENSEMBLE NVE
    STEPS 5
    TEMPERATURE 100.0
    TEMP_TOL 1.0
    TIMESTEP 0.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 80
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 0
    &END QS
    &SCF
      EPS_SCF 5.0E-3
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 4
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COLVAR
      &U
      &END U
    &END COLVAR
    &COLVAR
      &COORDINATION
        EXPON_DENOMINATOR 6
        EXPON_NUMERATOR 3
        KINDS_FROM O
        KINDS_TO O
        R0 6.61404143748
      &END COORDINATION
    &END COLVAR
    &COORD
      O  -1.5065         0.0            0.0
      H  -0.56369324319  0.09909298318  0.0
      H  -1.86242602118  0.87217009089  0.0
      O   1.5065         0.0            0.0
      H   1.82344868827 -0.46989575426  0.75490231761
      H   1.82344868827 -0.46989575426 -0.75490231761
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-BLYP
      MASS 2.0
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &PRINT
      &CELL
      &END CELL
      &KINDS
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
