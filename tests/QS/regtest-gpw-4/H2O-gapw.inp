&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O-gapw-npt
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NPT_I
    STEPS 6
    TEMPERATURE 300.0
    TIMESTEP 0.1
    &BAROSTAT
    &END BAROSTAT
    &THERMOSTAT
      &NOSE
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      NGRIDS 1
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      &CELL_REF
        ABC 6.0 6.0 6.0
      &END CELL_REF
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
