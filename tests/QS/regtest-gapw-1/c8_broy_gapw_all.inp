&GLOBAL
  FLUSH_SHOULD_FLUSH
  PRINT_LEVEL MEDIUM
  PROJECT c8_broy_gapw_all
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      NGRIDS 4
    &END MGRID
    &PRINT
      &MO
        ADD_LAST NUMERIC
        EIGENVALUES
        OCCUPATION_NUMBERS
        &EACH
          QS_SCF 100
        &END EACH
      &END MO
      ##      &MO_CUBES
      ##        NHOMO  64
      ##        NLUMO 20
      ##        WRITE_CUBE F
      ##      &END
    &END PRINT
    &QS
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
      METHOD GAPW
    &END QS
    &SCF
      ADDED_MOS 20 20
      EPS_SCF 5.0e-3
      MAX_SCF 50
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.1
        BETA 1.0
        GMIX_P
        METHOD BROYDEN_MIXING
        NBUFFER 8
      &END MIXING
      &SMEAR
        ELECTRONIC_TEMPERATURE 500.
        FIXED_MAGNETIC_MOMENT 0.0
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.42858871335 5.42858871335 5.42858871335
    &END CELL
    &KIND C
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/C_8.xyz
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
