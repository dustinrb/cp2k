&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT mix_loc_mark
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &LOCALIZE
      EPS_LOCALIZATION 1.0E-10
      LIST 1..4
      LIST_UNOCCUPIED 1..4
      METHOD CRAZY
      STATES ALL
      &PRINT
        &MOLECULAR_STATES
          MARK_STATES 1 2
          MARK_STATES 1 1
        &END MOLECULAR_STATES
        &WANNIER_CENTERS
        &END WANNIER_CENTERS
      &END PRINT
    &END LOCALIZE
    &MGRID
      CUTOFF 150
    &END MGRID
    &PRINT
      &MO_CUBES
        NHOMO 4
        NLUMO 4
        WRITE_CUBE .FALSE.
      &END MO_CUBES
      &WFN_MIX
        ! replace HOMO with an orthonormal linear combination of lumo and lumo+1
        &UPDATE
          ORIG_MARKED_STATE 1
          ORIG_SCALE 1.000000000000000000000
          ORIG_SPIN_INDEX ALPHA
          ORIG_TYPE VIRTUAL
          RESULT_MARKED_STATE 2
          RESULT_SCALE 0.0
          RESULT_SPIN_INDEX ALPHA
        &END UPDATE
      &END WFN_MIX
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      EPS_SCF 3.0E-7
      MAX_SCF 50
      SCF_GUESS ATOMIC
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
