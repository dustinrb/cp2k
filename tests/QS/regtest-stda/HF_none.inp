&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES T
  DEBUG_STRESS_TENSOR F
  DX 0.001
  STOP_ON_MISMATCH F
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &EXCITED_STATES T
      STATE 1
    &END EXCITED_STATES
    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
    &END QS
    &SCF
      EPS_SCF 1.E-8
      MAX_SCF 50
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-7
      KERNEL NONE
      MAX_ITER 50
      NSTATES 1
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
      H         0.000000    0.000000    4.260000
      F         0.000000    0.000000    3.360000
    &END COORD
    &KIND H
      BASIS_SET TZVP-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND F
      BASIS_SET TZVP-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
