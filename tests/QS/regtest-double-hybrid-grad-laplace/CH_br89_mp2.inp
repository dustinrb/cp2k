&GLOBAL
  PRINT_LEVEL LOW
  PROJECT CH_br89_mp2
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 1
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME HFX_BASIS
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    UKS
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &WF_CORRELATION
        MEMORY 1.00
        NUMBER_PROC 1
        &CANONICAL_GRADIENTS
          EPS_CANONICAL 0.0001
          FREE_HFX_BUFFER .TRUE.
          &CPHF
            EPS_CONV 1.0E-4
            MAX_ITER 10
          &END CPHF
        &END CANONICAL_GRADIENTS
        &INTEGRALS
          &WFC_GPW
            CUTOFF 25
            EPS_FILTER 1.0E-6
            EPS_GRID 1.0E-6
            REL_CUTOFF 10
          &END WFC_GPW
        &END INTEGRALS
        &RI_MP2
          BLOCK_SIZE -1
        &END RI_MP2
      &END WF_CORRELATION
      # Not a very useful functional, just for testing
      &XC_FUNCTIONAL
        &MGGA_X_BR89
        &END MGGA_X_BR89
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC [angstrom] 3.5 3.5 3.5
    &END CELL
    &COORD
      C     0.000     0.000     0.300
      H     0.000     1.173     0.000
      H     0.929    -0.536     0.000
      H    -0.929    -0.536     0.000
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
