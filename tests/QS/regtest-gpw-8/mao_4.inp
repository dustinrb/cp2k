&GLOBAL
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    CHARGE 1
    LSD
    &MGRID
      CUTOFF 200
    &END MGRID
    &PRINT
      &MAO_ANALYSIS
        ABC_THRESHOLD 1.e-4
        AB_THRESHOLD 1.e-2
        ANALYZE_UNASSIGNED_CHARGE T
        EPS_FUNCTION 1.e-6
        EPS_GRAD 1.e-4
        MAX_ITER 10
        NEGLECT_ABC F
        PRINT_BASIS F
        REFERENCE_BASIS EXTERNAL
      &END MAO_ANALYSIS
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      SCF_GUESS ATOMIC
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
      O     0.000000     0.000000     0.000000    H2O1
      H     0.000000     0.000000     1.000000    H2O1
      H     0.942809     0.000000    -0.333333    H2O1
    &END COORD
    &KIND H
      BASIS_SET ORB DZV-GTH-PADE
      BASIS_SET MAO TZVDD3DF3PD-GTH-BLYP
      MAO 1
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-GTH-PADE
      BASIS_SET MAO TZVDD3DF3PD-GTH-BLYP
      MAO 4
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
