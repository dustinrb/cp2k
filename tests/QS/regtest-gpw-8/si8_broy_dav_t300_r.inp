#CPQA DEPENDS si8_broy_dav_t300.inp
&GLOBAL
  FLUSH_SHOULD_FLUSH
  PRINT_LEVEL MEDIUM
  PROJECT si8_broy_dav_t300_r
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    RESTART_FILE_NAME ./si8_broy_dav-RESTART.wfn
    &MGRID
      CUTOFF 40
      NGRIDS 4
    &END MGRID
    &PRINT
      &MO
        EIGENVALUES
        OCCUPATION_NUMBERS
        &EACH
          QS_SCF 100
        &END EACH
      &END MO
      ##      &MO_CUBES
      ##        NHOMO  64
      ##        NLUMO 20
      ##        WRITE_CUBE F
      ##      &END
    &END PRINT
    &QS
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
      METHOD GPW
    &END QS
    &SCF
      ADDED_MOS 20 20
      CHOLESKY INVERSE
      EPS_SCF 1.0e-5
      MAX_SCF 20
      SCF_GUESS RESTART
      &DIAGONALIZATION
        ALGORITHM DAVIDSON
        EPS_ITER 1.e-6
        MAX_ITER 5
        &DAVIDSON
          CONV_MOS_PERCENT 0.5
          ENERGY_GAP 0.02
          FIRST_PREC 2
          NEW_PREC_EACH 20
        &END DAVIDSON
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.6
        BETA 1.0
        METHOD BROYDEN_MIXING
        NBROYDEN 15
      &END MIXING
      &SMEAR
        ELECTRONIC_TEMPERATURE 300.
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.42858871335 5.42858871335 5.42858871335
    &END CELL
    &KIND Si
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/SI_8.xyz
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
