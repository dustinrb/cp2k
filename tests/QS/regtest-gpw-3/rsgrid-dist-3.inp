&GLOBAL
  PRINT_LEVEL LOW
  PROJECT rsgrid-dist-3
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &PRINT
      &MO_CUBES
        NHOMO 1
        NLUMO 1
      &END MO_CUBES
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
    &END QS
    &SCF
      EPS_SCF 3.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
      &OT
        ENERGY_GAP 0.001
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A 5.0 0.0 3.0
      B 1.0 5.0 0.0
      C 0.0 2.0 5.0
    &END CELL
    &COORD
      O   0.000000    2.000000    1.940000
      H   0.000000    1.250000    2.520545
      H   0.000000    2.757136    2.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
