&GLOBAL
  PRINT_LEVEL LOW
  PROJECT CN-lowdin
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
    &END MGRID
    &PRINT
      &LOWDIN
      &END LOWDIN
    &END PRINT
    &QS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 5.0 5.0
    &END CELL
    &COORD
      N 0.0 0.0 0.0
      C 2.0 0.0 0.0
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
