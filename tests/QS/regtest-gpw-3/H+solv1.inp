&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H+solv1
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_STRESS_TENSOR F
&END DEBUG

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 0
    TEMPERATURE 300.0
    TIMESTEP 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR NONE
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MULTIPOLE
      &MULTIPOLE
        ANALYTICAL_GTERM
        EWALD_PRECISION 0.00000001
        RCUT 3.0
      &END MULTIPOLE
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &SCRF
      EPS_OUT 100.0
      LMAX 3
      &SPHERE
        RADIUS [angstrom] 3.0
        &CENTER
          XYZ [angstrom] 4.0 4.0 4.0
        &END CENTER
      &END SPHERE
    &END SCRF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COORD
      H   3.5000  5.1000  4.2000
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
