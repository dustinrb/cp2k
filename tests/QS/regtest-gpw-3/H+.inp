&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H+
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 0
    TEMPERATURE 300.0
    TIMESTEP 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
      &MT
        ALPHA 7.0
        REL_CUTOFF 1.2
      &END MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
      H   5.0000  5.0000  5.0000
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
