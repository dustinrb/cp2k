      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT ON
      &END OT
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE COULOMB
        &END INTERACTION_POTENTIAL
        &MEMORY
          EPS_STORAGE_SCALING 0.1
          MAX_MEMORY 900
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &PBE
          SCALE_C 1.0
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
      PERIODIC NONE
    &END CELL
    &COORD
      O        -4.1351226463        5.6217295343        4.1734819049
      H        -3.6794166617        5.9133996620        3.3765746437
      H        -4.8659807993        5.0922120122        3.8367105410
      O        5.7983928770        5.3062005829        2.0727136006
      H        5.6607899469        5.2055648779        3.0234478427
      H        6.9276058519        5.1612802270        1.6955450552
    &END COORD
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH
      BASIS_SET AUX_FIT SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      BASIS_SET AUX_FIT SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
