&GLOBAL
  PRINT_LEVEL LOW
  PROJECT h2o_polar
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_LRIGPW_AUXMOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      METHOD LRIGPW
    &END QS
    &SCF
      MAX_SCF 40
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      EPS 1E-6
      MAX_ITER 2000
      PRECONDITIONER FULL_ALL
      &POLAR
        DO_RAMAN T
      &END POLAR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [bohr] 10. 10. 10.
      PERIODIC NONE
    &END CELL
    &COORD
      UNIT bohr
      O           0.000000       0.000000       0.224953
      H           0.000000       1.451310      -0.899812
      H           0.000000      -1.451310      -0.899812
    &END COORD
    &KIND H
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI-DZVP-MOLOPT-GTH-MEDIUM
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI-DZVP-MOLOPT-GTH-MEDIUM
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
