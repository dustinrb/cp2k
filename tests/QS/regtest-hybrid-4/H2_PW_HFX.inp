&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2_PW_HFX
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 50
      NGRIDS 1
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER ANALYTIC
    &END POISSON
    &QS
      ! EPS_DEFAULT 1.0E-16
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &OT on
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &HF
        PW_HFX TRUE
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE COULOMB
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 100
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-14
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 25.0 25.0 25.0
    &END CELL
    &COORD
      H   0.0          0.0         0.0
      H   0.0          0.0         0.8
    &END COORD
    &KIND H
      POTENTIAL GTH-PBE-q1
      &BASIS
        1
        1  0  0  1  1
        0.5          1.0
      &END BASIS
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
