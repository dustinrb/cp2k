&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2
  RUN_TYPE ENERGY
&END GLOBAL

#CPQA DEPENDS H2-pbe-restart-run.inp
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME H2-pbe.restart
    &MGRID
      CUTOFF 250
      REL_CUTOFF 50
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 10
      SCF_GUESS RESTART
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      H 0.0 0.0 0.0
      H 0.0 0.0 1.0
    &END COORD
    &KIND H
      BASIS_SET aug-cc-pVTZ
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
