&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O-01
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 300
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GAPW
    &END QS
    &SCF
      ADDED_MOS 1000 1000
      EPS_SCF 1.0E-5
      MAX_SCF 1000
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-7
        &END SCREENING
      &END HF
      &WF_CORRELATION
        MEMORY 100.
        &MP2
          METHOD DIRECT_CANONICAL
        &END MP2
      &END WF_CORRELATION
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
    ! UKS
  &END DFT
  &SUBSYS
    &CELL
      ABC 7.0 7.0 7.0
      PERIODIC NONE
    &END CELL
    &COORD
      O       0.000000    0.000000    -0.111000
      H       0.000000   -0.744000     0.495000
      H       0.000000    0.744000     0.495000
    &END COORD
    &KIND H
      BASIS_SET aug-cc-pVDZ
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET aug-cc-pVDZ
      POTENTIAL ALL
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
