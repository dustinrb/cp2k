&GLOBAL
  PRINT_LEVEL LOW
  PROJECT dipole
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DE 0.0002
  DEBUG_DIPOLE .TRUE.
  DEBUG_FORCES .FALSE.
  DEBUG_POLARIZABILITY .FALSE.
  DEBUG_STRESS_TENSOR .FALSE.
  STOP_ON_MISMATCH .FALSE.
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    BASIS_SET_FILE_NAME BASIS_ADMM
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
      EXCH_SCALING_MODEL NONE
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &EFIELD
    &END EFIELD
    &EXCITED_STATES T
      STATE 1
    &END EXCITED_STATES
    &MGRID
      CUTOFF 100
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &PRINT
      &MOMENTS ON
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
    &END PRINT
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 50
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 20
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      ADMM_KERNEL_CORRECTION_SYMMETRIC T
      ADMM_KERNEL_XC_CORRECTION F
      CONVERGENCE [eV] 1.0e-5
      KERNEL FULL
      MAX_ITER 50
      NSTATES 1
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH-PADE
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH-PADE
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
