&GLOBAL
  PROJECT H2O_pao_exp_cluster_MD
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 3
    TEMPERATURE 300
    TIMESTEP 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-8
      EPS_SCF 1.0E-8
      EXTRAPOLATION_ORDER 3
      MATRIX_CLUSTER_TYPE MOLECULAR
      MAX_SCF 25
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES OFF
      S_PRECONDITIONER NONE
      &PAO
        EPS_PAO 1.0E-6
        MAX_PAO 100
        PARAMETERIZATION EXP
        PENALTY_STRENGTH 0.0
        PREOPT_DM_FILE H2O_ref_LS_DM_SPIN_1_RESTART.dm
        RESTART_FILE H2O_pao_exp-1_0.pao
        &LINE_SEARCH
          METHOD ADAPT
        &END LINE_SEARCH
      &END PAO
    &END LS_SCF
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      LS_SCF
    &END QS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      O         2.6116774290        4.1629472392        4.1629480502 mol1
      H         1.8450021896        4.5850871565        4.5850871241 mol1
      H         2.2373131663        3.5277354616        3.5277353471 mol1
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      PAO_BASIS_SIZE 4
      POTENTIAL GTH-PBE
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      PAO_BASIS_SIZE 4
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
