@SET NREP 1
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-7
      EPS_SCF 1.0E-7
      MAX_SCF 20
      MIXING_FRACTION 0.45
      MU -0.20
      PERFORM_MU_SCAN OFF
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES OFF
      RESTART_READ
      S_PRECONDITIONER NONE
      &CURVY_STEPS
      &END CURVY_STEPS
    &END LS_SCF
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
      LS_SCF
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 30
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 9.8528 9.8528 9.8528
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    # 32 H2O (TIP5P,1bar,300K) a = 9.8528
    &COORD
      O       2.280398       9.146539       5.088696 H2O
      H       1.762019       9.820429       5.528454 H2O
      H       3.095987       9.107088       5.588186 H2O
      O       1.251703       2.406261       7.769908 H2O
      H       0.554129       2.982634       8.082024 H2O
      H       1.771257       2.954779       7.182181 H2O
      O       1.596302       6.920128       0.656695 H2O
      H       2.112148       6.126321       0.798136 H2O
      H       1.776389       7.463264       1.424030 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT ECUBE
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.000001
  &END TIMINGS
  ! EXTENDED_FFT_LENGTHS ! enable for large systems and FFTW
&END GLOBAL
