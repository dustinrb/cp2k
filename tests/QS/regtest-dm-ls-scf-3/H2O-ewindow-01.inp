@SET NREP 1
@SET GMAXVAL 40
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-7
      EPS_SCF 1.0E-6
      MAX_SCF 20
      MIXING_FRACTION 0.45
      MU -0.20
      PERFORM_MU_SCAN OFF
      REPORT_ALL_SPARSITIES OFF
      S_PRECONDITIONER MOLECULAR
    &END LS_SCF
    &POISSON
      &EWALD
        EWALD_TYPE SPME
        GMAX ${GMAXVAL} ${GMAXVAL} ${GMAXVAL}
        O_SPLINE 5
      &END EWALD
    &END POISSON
    &PRINT
      &ENERGY_WINDOWS
        N_WINDOWS 10
        PRINT_CUBES no
        &EACH
          JUST_ENERGY 1
        &END EACH
      &END ENERGY_WINDOWS
      &MOMENTS
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
      &MULLIKEN OFF
      &END MULLIKEN
    &END PRINT
    &QS
      LS_SCF
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 9.8528 9.8528 9.8528
      PERIODIC NONE
    &END CELL
    # 32 H2O (TIP5P,1bar,300K) a = 9.8528
    &COORD
      O       2.280398       9.146539       5.088696 H2O
      H       1.762019       9.820429       5.528454 H2O
      H       3.095987       9.107088       5.588186 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH-q1
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH-q6
      POTENTIAL GTH-PADE-q6
    &END KIND
    &PRINT
      &ATOMIC_COORDINATES OFF
      &END ATOMIC_COORDINATES
      &MOLECULES OFF
      &END MOLECULES
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2O-ewindow
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.000001
  &END TIMINGS
  ! EXTENDED_FFT_LENGTHS ! enable for large systems and FFTW
  ! TRACE
  ! TRACE_MAX 1000
&END GLOBAL
