&GLOBAL
  PROJECT C_TRS4
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    LSD
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_SCF 1.0E-7
      MAX_SCF 100
      MIXING_FRACTION 0.3
      MU -0.1
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES OFF
      S_PRECONDITIONER NONE
    &END LS_SCF
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      LS_SCF
    &END QS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      C     0.0 0.0 0.0
    &END COORD
    # test that in a minimal basis we still get the proper trace
    &KIND C
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
