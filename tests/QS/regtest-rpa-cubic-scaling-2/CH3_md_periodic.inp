&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT CH3_md_periodic
  RUN_TYPE MD
  &TIMINGS
    THRESHOLD 0.01
  &END TIMINGS
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    UKS
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &WF_CORRELATION
        &INTEGRALS
          ERI_METHOD MME
        &END INTEGRALS
        &LOW_SCALING
          EPS_FILTER 1.0E-8
          MEMORY_CUT 2
          &CPHF
            EPS_CONV 1.0E-4
          &END CPHF
        &END LOW_SCALING
        &RI
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END RI_METRIC
        &END RI
        &RI_RPA
          QUADRATURE_POINTS 2
          &HF
            FRACTION 1.00
            &INTERACTION_POTENTIAL
              CUTOFF_RADIUS 1.0
              POTENTIAL_TYPE TRUNCATED
            &END INTERACTION_POTENTIAL
            &SCREENING
              EPS_SCHWARZ 1.0E-6
              EPS_SCHWARZ_FORCES 1.0E-2
            &END SCREENING
          &END HF
        &END RI_RPA
      &END WF_CORRELATION
      # RPA@PBE
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 6.000 6.000 6.000
    &END CELL
    &KIND H
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_FORMAT xyz
      COORD_FILE_NAME CH3.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
