&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT Li-hybrid-MCY3
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT on
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      DENSITY_CUTOFF 1.0E-8
      GRADIENT_CUTOFF 1.0E-8
      &ADIABATIC_RESCALING
        FUNCTIONAL_MODEL PADE
        FUNCTIONAL_TYPE MCY3
        LAMBDA 0.71
        OMEGA 0.2
      &END ADIABATIC_RESCALING
      &HF
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE COULOMB
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 100
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END SCREENING
      &END HF
      &HF
        FRACTION 1.05601
        &INTERACTION_POTENTIAL
          OMEGA 0.142
          POTENTIAL_TYPE MIX_LG
          SCALE_GAUSSIAN 0.16022984
          SCALE_LONGRANGE 1.0
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 100
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &BECKE88
        &END BECKE88
        &BECKE88_LR_ADIABATIC
          LAMBDA 0.71
          OMEGA 0.2
          SCALE_X -0.94399
        &END BECKE88_LR_ADIABATIC
        &LYP_ADIABATIC
          LAMBDA 0.71
        &END LYP_ADIABATIC
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      Li   0.0   0.0   0.0
    &END COORD
    &KIND Li
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
