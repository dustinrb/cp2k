&GLOBAL
  PRINT_LEVEL LOW
  PROJECT o2-gapw-uks-4
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME POTENTIAL
    UNRESTRICTED_KOHN_SHAM T
    &MGRID
      CUTOFF 70
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 4
      PRECONDITIONER FULL_ALL
      &CURRENT
        GAUGE ATOM
        GAUGE_ATOM_RADIUS 0.5
      &END CURRENT
      &LOCALIZE
        MAX_ITER 1
      &END LOCALIZE
      &NMR
        SHIFT_GAPW_RADIUS 0.5
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O   0.000000    0.000000    0.615571
      O   0.000000    0.000000   -0.615571
    &END COORD
    &KIND O
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
