&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT K2
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 140
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      EPS_DIIS 0.1
      EPS_SCF 1.0E-4
      IGNORE_CONVERGENCE_FAILURE
      MAX_DIIS 4
      MAX_SCF 3
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 6.0 6.0
    &END CELL
    &COORD
      K     0.000000  0.000000  0.000000
      K     3.000000  0.000000  0.000000
    &END COORD
    &KIND K
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
