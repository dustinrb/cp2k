&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT vdW_PP_GRIMME_p2
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      NGRIDS 1
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0e-0
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          SCALING 1.0e0
          TYPE DFTD2
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 3.0 3.0 3.0
      MULTIPLE_UNIT_CELL 3 3 3
    &END CELL
    &COORD
      Ne  0.0 0.0 0.0
    &END COORD
    &KIND Ne
      BASIS_SET SZV-GTH
      POTENTIAL GTH-PADE-q8
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 3 3 3
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
