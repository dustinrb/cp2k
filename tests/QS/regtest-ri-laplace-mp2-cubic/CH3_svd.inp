&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT CH3_svd
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.01
  &END TIMINGS
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    UKS
    &MGRID
      CUTOFF 100
      REL_CUTOFF 20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-8
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &WF_CORRELATION
        SCALE_S 1.3
        &INTEGRALS
          ERI_METHOD OS
        &END INTEGRALS
        &LOW_SCALING
          MEMORY_CUT 2
        &END LOW_SCALING
        &RI
          DO_SVD
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END RI_METRIC
        &END RI
        &RI_SOS_MP2
          QUADRATURE_POINTS 5
        &END RI_SOS_MP2
      &END WF_CORRELATION
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 8.000 8.000 8.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_FORMAT xyz
      COORD_FILE_NAME CH3.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
