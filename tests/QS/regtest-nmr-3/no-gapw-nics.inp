&GLOBAL
  PRINT_LEVEL LOW
  PROJECT no-gapw-nics
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD T
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 5
      PRECONDITIONER FULL_ALL
      &CURRENT
        GAUGE ATOM
        ORBITAL_CENTER COMMON
      &END CURRENT
      &LOCALIZE
        MAX_ITER 5
      &END LOCALIZE
      &NMR
        INTERPOLATE_SHIFT T
        NICS T
        NICS_FILE_NAME ./nics_no
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O   0.000000    0.000000    0.542338
      N   0.000000    0.000000   -0.619815
    &END COORD
    &KIND N
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
