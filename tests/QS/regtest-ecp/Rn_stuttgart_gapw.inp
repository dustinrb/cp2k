&GLOBAL
  PROJECT Rn_stuttgart_gapw
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME ./ECP_BASIS_POT
    POTENTIAL_FILE_NAME ./ECP_BASIS_POT
    &MGRID
      CUTOFF 400
      NGRIDS 5
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL LDA
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 10.0
    &END CELL
    &COORD
      Rn  0.00000    0.00000     0.00000
      Rn  0.00000    0.00000     5.00000
    &END COORD
    &KIND Rn
      BASIS_SET Stuttgart-RLC
      POTENTIAL ECP Stuttgart_RLC_ECP
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
