&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT graphite-stm
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 200
    &END MGRID
    &PRINT
      &STM
        BIAS -6 -1 1 6
        NLUMO 32
        TH_TORB S
        TH_TORB PZ
      &END STM
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      EPS_SCF 1.0  !E-6
      MAX_SCF 30
      SCF_GUESS ATOMIC
      &OT
        ! PRECONDITIONER FULL_KINETIC
        ENERGY_GAP 0.01
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0  !E-6
        MAX_SCF 30
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A 1.22800000 -2.12695839 0.00000000
      B 1.22800000 2.12695839 0.00000000
      C 0.00000000 0.00000000 6.69600000
    &END CELL
    &COORD
      C    0.00000000  0.00000000  1.67400000
      C    0.00000000  0.00000000  5.02200000
      C    1.22800000  0.70898613  1.67400000
      C    1.22800000 -0.70898613  5.02200000
    &END COORD
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
