&GLOBAL
  PRINT_LEVEL low
  PROJECT BN
  RUN_TYPE energy
&END GLOBAL

&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &KPOINTS
      SCHEME MONKHORST-PACK 2 2 1
    &END KPOINTS
    &PRINT
      &KS_CSR_WRITE
        BINARY .TRUE.
        REAL_SPACE .TRUE.
        THRESHOLD 1.0E-4
      &END KS_CSR_WRITE
    &END PRINT
    &QS
      METHOD GPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.40
        METHOD DIRECT_P_MIXING
      &END MIXING
      &PRINT
        &RESTART off
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.3483 5.0209 15.0
    &END CELL
    &COORD
      SCALED
      N    0.0000    0         0
      B    0.3333    0         0
      N    0.5000    0.2500    0
      B    0.8333    0.2500    0
      N    0.0000    0.5000    0
      B    0.3333    0.5000    0
      N    0.5000    0.7500    0
      B    0.8333    0.7500    0
    &END COORD
    &KIND B
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND N
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
