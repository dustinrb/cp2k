&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Be_GAPW_XC
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
      METHOD GAPW_XC
    &END QS
    &SCF
      EPS_SCF 3.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
      &OT
        ENERGY_GAP 0.001
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL TPSS
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      Be   0.000000    0.000000    0.000000
    &END COORD
    &KIND Be
      BASIS_SET DZV-ALL-PADE
      POTENTIAL GTH-BP-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
