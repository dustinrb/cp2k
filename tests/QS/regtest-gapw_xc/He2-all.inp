&GLOBAL
  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL LOW
  PROJECT gapw_all_pade
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
      NGRIDS 1
    &END MGRID
    &QS
      ALPHA0_HARD 10
      EPSFIT 1.E-4
      EPSISO 1.0E-12
      EPSRHO0 1.E-8
      EPSSVD 0.0
      EPS_GVG 1.0E-6
      EPS_PGF_ORB 1.0E-6
      LMAXN0 2
      LMAXN1 6
      METHOD GAPW_XC
      QUADRATURE GC_LOG
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
      &OT ON
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &RESTART
          FILENAME =RESTART
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      He 0.0 0.0 0.0
      He 2.0 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET DZVP-ALL-PADE
      LEBEDEV_GRID 50
      POTENTIAL GTH-PADE
      RADIAL_GRID 150
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
