&GLOBAL
  FLUSH_SHOULD_FLUSH
  PRINT_LEVEL MEDIUM
  PROJECT c8_pmix_gapw_xc
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      NGRIDS 4
    &END MGRID
    &QS
      METHOD GAPW_XC
    &END QS
    &SCF
      ADDED_MOS 20
      EPS_SCF 1.0e-2
      MAX_SCF 500
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.25
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 3.56683 3.56683 3.56683
    &END CELL
    &COORD
      SCALED
      C     0.000000    0.000000    0.000000
      C     0.500000    0.500000    0.000000
      C     0.500000    0.000000    0.500000
      C     0.000000    0.500000    0.500000
      C     0.250000    0.250000    0.250000
      C     0.250000    0.750000    0.750000
      C     0.750000    0.250000    0.750000
      C     0.750000    0.750000    0.250000
    &END COORD
    &KIND C
      BASIS_SET SZV-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
