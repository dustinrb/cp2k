&GLOBAL
  PRINT_LEVEL low
  PROJECT H2O_Onopaw_gop
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 2
    OPTIMIZER BFGS
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 280
      NGRIDS 5
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GAPW_XC
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      MAX_SCF 10
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-4
        MAX_SCF 3
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      O  0.000000    0.000000    0.117226
      H  0.000000    0.757136   -0.468906
      H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      POTENTIAL GTH-PADE
      &BASIS
        2
        1  0  0  3  1
        18.7311369600   0.0334946043
        2.8253943650   0.2347269535
        0.6401216923   0.8137573262
        2  0  0  1  1
        0.1612777588   1.0000000000
      &END BASIS
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      GPW_TYPE
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
