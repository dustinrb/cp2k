&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT no-gapw-1
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD T
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 10
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 5
      PRECONDITIONER FULL_ALL
      &CURRENT
        GAUGE R_AND_STEP_FUNCTION
        ORBITAL_CENTER WANNIER
      &END CURRENT
      &LOCALIZE
        MAX_ITER 5
        METHOD CRAZY
      &END LOCALIZE
      &NMR
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O   0.000000    0.000000    0.542338
      N   0.000000    0.000000   -0.619815
    &END COORD
    &KIND N
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
