&GLOBAL
  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL LOW
  PROJECT h2-gapw-1
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 1
      PRECONDITIONER FULL_ALL
      &CURRENT
        ORBITAL_CENTER COMMON
      &END CURRENT
      &LOCALIZE
        MAX_ITER 1
      &END LOCALIZE
      &NMR
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      H   0.000000    0.000000    0.373334
      H   0.000000    0.000000   -0.373334
    &END COORD
    &KIND H
      BASIS_SET 3-21G*
      HARD_EXP_RADIUS 0.8
      LEBEDEV_GRID 10
      POTENTIAL ALL
      RADIAL_GRID 20
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
