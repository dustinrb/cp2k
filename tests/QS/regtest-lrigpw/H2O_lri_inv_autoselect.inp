&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O_lrigpw_inv_autoselect
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_LRI
    CHARGE 0
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &QS
      METHOD LRIGPW
      &LRIGPW
        LRI_OVERLAP_MATRIX AUTOSELECT
        MAX_CONDITION_NUM 10.0
        SHG_LRI_INTEGRALS .FALSE.
      &END LRIGPW
