      EPS_SCF 1.0E-6
      MAX_SCF 30
      SCF_GUESS ATOMIC
      &DIAGONALIZATION
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC XYZ
    &END CELL
    &COORD
      O  0.000000    0.000000    0.117226
      H  0.000000    0.757136   -0.468906
      H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI_SZV-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI_SZV-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
