&GLOBAL
  PRINT_LEVEL LOW
  PROJECT stress_H2O_lrigpw
  RUN_TYPE CELL_OPT
&END GLOBAL

&MOTION
  &CELL_OPT
    MAX_ITER 1
  &END CELL_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_LRI
    CHARGE 0
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &QS
      METHOD LRIGPW
      &LRIGPW
        SHG_LRI_INTEGRALS .FALSE.
      &END LRIGPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 30
      SCF_GUESS ATOMIC
      &DIAGONALIZATION
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC XYZ
    &END CELL
    &COORD
      O  0.000000    0.000000    0.117226
      H  0.000000    0.757136   -0.468906
      H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI_SZV-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI_SZV-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &PRINT
      &KINDS
        BASIS_SET
      &END KINDS
    &END PRINT
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
