&GLOBAL
  PRINT_LEVEL low
  PROJECT O2_opt_lribas
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_LRI
    CHARGE 0
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME POTENTIAL
    UNRESTRICTED_KOHN_SHAM T
    &MGRID
      CUTOFF 150
      NGRIDS 1
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GPW
      &LRIGPW
        SHG_LRI_INTEGRALS .FALSE.
      &END LRIGPW
      &OPTIMIZE_LRI_BASIS
        ACCURACY 1.0E-10
        MAX_FUN 4
        STEP_SIZE 0.005
      &END OPTIMIZE_LRI_BASIS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS atomic
      &DIAGONALIZATION
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
      PERIODIC NONE
    &END CELL
    &COORD
      O     0.000000     0.000000     0.000000
      O     0.000000     0.000000     1.210000
    &END COORD
    &KIND O
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET LRI_AUX LRI_SZV-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
