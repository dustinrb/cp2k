&GLOBAL
  PRINT_LEVEL low
  PROJECT H2_tz2p_lri_diag
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_LRI
    CHARGE 0
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 280
      NGRIDS 1
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD LRIGPW
      &LRIGPW
        SHG_LRI_INTEGRALS .FALSE.
      &END LRIGPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS atomic
      &DIAGONALIZATION
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
      H     0.000000     0.000000     0.000000
      H     0.000000     0.000000     1.008000
    &END COORD
    &KIND H
      BASIS_SET ORB adf_tz2p_basis
      BASIS_SET LRI_AUX adf_tz2p_fit_basis
      POTENTIAL GTH-PADE-q1
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
