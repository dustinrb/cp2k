&GLOBAL
  PRINT_LEVEL LOW
  PROJECT NO_tddfpt-s-1
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD T
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 260
    &END MGRID
    &QS
    &END QS
    &SCF
      MAX_SCF 35
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-5
      KERNEL sTDA
      MAX_ITER 50
      NSTATES 3
      &STDA
        DO_EXCHANGE F
        FRACTION 0.0
      &END STDA
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O   0.100000    0.000000    0.542338
      N   0.000000    0.300000   -0.619815
    &END COORD
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
