&GLOBAL
  PRINT_LEVEL LOW
  PROJECT N2
  RUN_TYPE GEO_OPT
  &REFERENCES OFF
  &END REFERENCES
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 1
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &ENERGY_CORRECTION
      ENERGY_FUNCTIONAL DCDFT
      HARRIS_BASIS HARRIS
      &RESPONSE_SOLVER
        EPS 1.0E-6
        METHOD MO_SOLVER
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END RESPONSE_SOLVER
      &XC
        &XC_FUNCTIONAL B3LYP
        &END XC_FUNCTIONAL
      &END XC
    &END ENERGY_CORRECTION
    &MGRID
      CUTOFF 100
      REL_CUTOFF 20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      N     0.000000     0.000000     0.650000
      N     0.000000     0.000000    -0.650000
    &END COORD
    &KIND N
      BASIS_SET ORB DZVP-GTH
      BASIS_SET HARRIS DZVP-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
