&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT O2-ADMMP-HYB
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_ccGRB_UZH
    BASIS_SET_FILE_NAME BASIS_ADMM_UZH
    LSD
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_SCALING_MODEL MERLOT
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 200
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 0.45
      &END HF
      &XC_FUNCTIONAL
        &PBE
          SCALE_X 0.55
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000    0.000000
      O   0.000000    0.000000    1.160000
    &END COORD
    &KIND H
      BASIS_SET ccGRB-D-q1
      BASIS_SET AUX_FIT admm-dz-q1
      POTENTIAL GTH-HYB-q1
    &END KIND
    &KIND O
      BASIS_SET ccGRB-D-q6
      BASIS_SET AUX_FIT admm-dz-q6
      POTENTIAL GTH-HYB-q6
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
