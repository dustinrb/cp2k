&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2O-hybrid-ls-EMD
  RUN_TYPE EHRENFEST_DYN
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TEMPERATURE 300.0
    TIMESTEP [au_t] 0.25
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &LS_SCF
      EPS_FILTER 1.0E-10
      EPS_LANCZOS 1.0E-8
      MAX_ITER_LANCZOS 30
      SIGN_SQRT_ORDER 3
    &END LS_SCF
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &REAL_TIME_PROPAGATION
      DENSITY_PROPAGATION .TRUE.
      EPS_ITER 1.0E-9
      EXP_ACCURACY 1.0E-11
      INITIAL_WFN SCF_WFN
      MAT_EXP TAYLOR
      MAX_ITER 7
      PROPAGATOR ETRS
    &END REAL_TIME_PROPAGATION
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT ON
        ROTATION
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 2.0
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          EPS_STORAGE_SCALING 0.1
          MAX_MEMORY 50
          TREAT_FORCES_IN_CORE TRUE
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
          EPS_SCHWARZ_FORCES 1.0E-10
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PBE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
