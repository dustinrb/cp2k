! size can be tuned by setting NREP
! molecular clustering is an interesting parameter
@SET NREP 1
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &LS_SCF
      EPS_FILTER 1.0E-6
      EPS_SCF 1.0E-6
      MATRIX_CLUSTER_TYPE MOLECULAR
      MAX_SCF 1
      MIXING_FRACTION 0.45
      MU 0.15
      PERFORM_MU_SCAN OFF
      PURIFICATION_METHOD SIGN
      REPORT_ALL_SPARSITIES OFF
      SIGN_METHOD SUBMATRIX
      SIGN_SYMMETRIC
      SUBMATRIX_SIGN_METHOD DIRECT
      S_PRECONDITIONER MOLECULAR
      S_SQRT_METHOD NEWTONSCHULZ
      S_SQRT_ORDER 3
    &END LS_SCF
    &MGRID
      CUTOFF 175
      SKIP_LOAD_BALANCE_DISTRIBUTED
      &RS_GRID
        MAX_DISTRIBUTED_LEVEL 5
      &END RS_GRID
    &END MGRID
    &PRINT
      &MULLIKEN OFF
      &END MULLIKEN
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
      LS_SCF
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 9.8528 9.8528 9.8528
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    # 32 H2O (TIP5P,1bar,300K) a = 9.8528
    &COORD
      O       2.280398       9.146539       5.088696 H2O
      H       1.762019       9.820429       5.528454 H2O
      H       3.095987       9.107088       5.588186 H2O
    &END COORD
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &PRINT
      &ATOMIC_COORDINATES OFF
      &END ATOMIC_COORDINATES
      &MOLECULES OFF
      &END MOLECULES
    &END PRINT
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  EXTENDED_FFT_LENGTHS
  PRINT_LEVEL MEDIUM
  PROJECT H2O
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.000001
  &END TIMINGS
  ! TRACE
  ! TRACE_MAX 10000
&END GLOBAL
