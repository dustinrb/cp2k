&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O-mp2-gpw-lr
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      REL_CUTOFF 20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
    &END QS
    &SCF
      ADDED_MOS 1000 1000
      EPS_SCF 1.0E-5
      MAX_SCF 1000
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-7
        &END SCREENING
      &END HF
      &WF_CORRELATION
        GROUP_SIZE 1
        MEMORY 100.
        &INTEGRALS
          &INTERACTION_POTENTIAL
            OMEGA 0.5
            POTENTIAL_TYPE LONGRANGE
          &END INTERACTION_POTENTIAL
          &WFC_GPW
            CUTOFF 100
            EPS_FILTER 1.0E-6
            EPS_GRID 1.0E-5
            REL_CUTOFF 20
          &END WFC_GPW
        &END INTEGRALS
        &MP2
          METHOD MP2_GPW
        &END MP2
      &END WF_CORRELATION
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
    ! UKS
  &END DFT
  &SUBSYS
    &CELL
      ABC 7.0 7.0 7.0
      PERIODIC NONE
    &END CELL
    &COORD
      O       0.000000    0.000000    -0.111000
      H       0.000000   -0.744000     0.495000
      H       0.000000    0.744000     0.495000
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
