&GLOBAL
  PRINT_LEVEL low
  PROJECT H2O_gpw
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 280
      NGRIDS 5
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 30
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        N_DIIS 7
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &RESTART
          ADD_LAST NUMERIC
          &EACH
            MD 1
            QS_SCF 0
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      O  0.000000    0.000000    0.117226
      H  0.000000    0.757136   -0.468906
      H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      POTENTIAL ALL
      &BASIS
        # 6-31G* Hydrogen
        2
        1  0  0  3  1
        18.7311369600   0.0334946043
        2.8253943650   0.2347269535
        0.6401216923   0.8137573262
        2  0  0  1  1
        0.1612777588   1.0000000000
      &END BASIS
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      GPW_TYPE
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
