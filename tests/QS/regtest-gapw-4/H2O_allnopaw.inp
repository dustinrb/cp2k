&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2O_allnopaw
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 280
      NGRIDS 1
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 30
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        N_DIIS 7
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &DETAILED_ENERGY
          &EACH
            QS_SCF 1
          &END EACH
        &END DETAILED_ENERGY
        &RESTART
          ADD_LAST NUMERIC
          &EACH
            MD 1
            QS_SCF 0
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      O  0.000000    0.000000    0.117226
      H  0.000000    0.757136   -0.468906
      H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      GPW_TYPE
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      GPW_TYPE
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
