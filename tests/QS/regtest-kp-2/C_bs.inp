&GLOBAL
  PRINT_LEVEL LOW
  PROJECT C_bs
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &KPOINTS
      FULL_GRID ON
      KPOINT 0.341666666667 0.3166666666667 0.0 1.
      KPOINT 0.333333333333 0.3333333333333 0.0 1.
      KPOINT 0.32 0.32 0.0 1.
      PARALLEL_GROUP_SIZE 0
      SCHEME GENERAL
      SYMMETRY OFF
    &END KPOINTS
    &MGRID
      CUTOFF 100
    &END MGRID
    &PRINT
      &MO
        ADD_LAST numeric
        EIGENVALUES .TRUE.
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-08
      EXTRAPOLATION USE_GUESS
    &END QS
    &SCF
      ADDED_MOS 2
      CHOLESKY INVERSE
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.1
        BETA 1.5
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      &PRINT
        &RESTART off
        &END RESTART
      &END PRINT
      &SMEAR ON
        ELECTRONIC_TEMPERATURE [K] 30
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL LDA
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A 2.46857000 0.00000000 0.0000
      B -1.23428500 2.13784433 0.0000
      C 0.00000000 0.00000000 15.0
      PERIODIC XYZ
    &END CELL
    &COORD
      C   0.0000   0.0000000   0.0000
      C   0.0000   1.4252366   0.0000
    &END COORD
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
