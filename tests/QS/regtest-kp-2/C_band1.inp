&GLOBAL
  PRINT_LEVEL LOW
  PROJECT C
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &KPOINTS
      EPS_GEO 1.e-8
      FULL_GRID ON
      PARALLEL_GROUP_SIZE 0
      SCHEME MONKHORST-PACK 1 1 1
      SYMMETRY OFF
      VERBOSE F
      WAVEFUNCTIONS REAL
    &END KPOINTS
    &MGRID
      CUTOFF 120
      REL_CUTOFF 30
    &END MGRID
    &PRINT
      &BAND_STRUCTURE
        ADDED_MOS 2
        FILE_NAME xx.bs
        &KPOINT_SET
          NPOINTS 10
          SPECIAL_POINT Gamma 0.0 0.0 0.0
          SPECIAL_POINT X 1.0 0.0 0.0
          UNITS B_VECTOR
        &END KPOINT_SET
        &KPOINT_SET
          NPOINTS 5
          SPECIAL_POINT 0.0 0.0 0.0
          SPECIAL_POINT 0.5 0.5 0.5
          SPECIAL_POINT 1.0 0.0 0.0
          UNITS B_VECTOR
        &END KPOINT_SET
      &END BAND_STRUCTURE
      &KS_CSR_WRITE
        BINARY .TRUE.
        THRESHOLD 1.0E-4
        UPPER_TRIANGULAR .TRUE.
      &END KS_CSR_WRITE
      &S_CSR_WRITE
        BINARY .TRUE.
        THRESHOLD 1.0E-4
        UPPER_TRIANGULAR .TRUE.
      &END S_CSR_WRITE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
      EXTRAPOLATION USE_GUESS
      METHOD GPW
    &END QS
    &SCF
      CHOLESKY OFF
      EPS_EIGVAL 1.0E-5
      EPS_SCF 1.0E-4
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.70
        METHOD DIRECT_P_MIXING
      &END MIXING
      &PRINT
        &RESTART off
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 3.56683 3.56683 3.56683
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &COORD
      SCALED
      C     0.000000    0.000000    0.000000
      C     0.500000    0.500000    0.000000
      C     0.500000    0.000000    0.500000
      C     0.000000    0.500000    0.500000
      C     0.250000    0.250000    0.250000
      C     0.250000    0.750000    0.750000
      C     0.750000    0.250000    0.750000
      C     0.750000    0.750000    0.250000
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q4
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
