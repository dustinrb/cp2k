&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT dftd2_t3
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 10
      NGRIDS 1
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0e-0
      MAX_SCF 1
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          R_CUTOFF 20.
          SCALING 0.75e0
          TYPE DFTD2
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 3.0 3.0 3.0
    &END CELL
    &COORD
      SCALED
      He    0.5 0.5 0.5
    &END COORD
    &KIND He
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
