&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O-magnetic
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &PRINT
      &MOMENTS
        MAGNETIC
        PERIODIC .FALSE.
      &END MOMENTS
    &END PRINT
    &QS
      EXTRAPOLATION_ORDER 3
      WF_INTERPOLATION ASPC
    &END QS
    &SCF
      EPS_SCF 1.E-2
      MAX_SCF 30
      SCF_GUESS ATOMIC
      &OT T
        MINIMIZER DIIS
        N_DIIS 9
      &END OT
      &OUTER_SCF
        EPS_SCF 1.E-2
        MAX_SCF 5
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL HCTH120
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O        -0.0005010000         1.5173980000         0.0000000000
      H         0.0944820000         0.5534860000         0.0000000000
      H         0.9013420000         1.8476590000         0.0000000000
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-HCTH120-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-HCTH120-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
