&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT_NAME ne
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_SOC_POTENTIALS
    &MGRID
      CUTOFF 500
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-7
        MAX_SCF 200
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE 1.0E-6
      KERNEL FULL
      MAX_ITER 20
      MAX_KV 60
      NSTATES 2
      &PRINT
        &SOC_PRINT
          SOME T
          SPLITTING T
          UNIT_WN
        &END SOC_PRINT
      &END PRINT
      &SOC
        EPS_FILTER 1.0E-15
      &END SOC
      &XC
        &XC_FUNCTIONAL PBE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      Ne 0.0 0.0 0.0
    &END COORD
    &KIND Ne
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
