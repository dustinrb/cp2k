&GLOBAL
  PRINT_LEVEL LOW
  PROJECT STRESS_RI-MP2
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DE 0.001
  DEBUG_DIPOLE .FALSE.
  DEBUG_FORCES .FALSE.
  DEBUG_POLARIZABILITY .FALSE.
  DEBUG_STRESS_TENSOR .TRUE.
  EPS_NO_ERROR_CHECK 5.e-5
  STOP_ON_MISMATCH .FALSE.
&END DEBUG

&MOTION
  &CELL_OPT
    MAX_ITER 0
  &END CELL_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME HFX_BASIS
    BASIS_SET_FILE_NAME BASIS_ADMM
    POTENTIAL_FILE_NAME POTENTIAL
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 800
      REL_CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &INTERACTION_POTENTIAL
          # One should actually chose half the nearest neighbour distance (here 2.4999)
          CUTOFF_RADIUS 1.5
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA t_c_g.dat
        &END INTERACTION_POTENTIAL
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          EPS_SCHWARZ_FORCES 1.0E-6
          SCREEN_ON_INITIAL_P .FALSE.
        &END SCREENING
      &END HF
      &WF_CORRELATION
        MEMORY 1.00
        NUMBER_PROC 1
        &CANONICAL_GRADIENTS
          EPS_CANONICAL 0.0001
          FREE_HFX_BUFFER .TRUE.
          &CPHF
            EPS_CONV 1.0E-4
            MAX_ITER 30
          &END CPHF
        &END CANONICAL_GRADIENTS
        &INTEGRALS
          &WFC_GPW
            CUTOFF 250
            EPS_FILTER 1.0E-6
            EPS_GRID 1.0E-6
            REL_CUTOFF 30
          &END WFC_GPW
        &END INTEGRALS
        &RI_MP2
          BLOCK_SIZE 1
        &END RI_MP2
      &END WF_CORRELATION
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC [angstrom] 6.0000 6.0000 6.0000
    &END CELL
    &COORD
      O       0.000000    0.000000    -0.211000
      H       0.000000   -0.844000     0.495000
      H       0.000000    0.744000     0.495000
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-HF-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
