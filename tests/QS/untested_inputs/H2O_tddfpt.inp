&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O
  RUN_TYPE SPECTRA
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    EXCITATIONS tddfpt
    &MGRID
      CUTOFF 160
    &END MGRID
    &QS
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.4
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
    &TDDFPT
      INVERT_S Y
      KERNEL Y
      MAX_KV 60
      NEV 3
      OE_CORR SAOP
      REORTHO 2
      RESTARTS 2
      RES_ETYPE SINGLETS
      &XC
        &XC_FUNCTIONAL PBE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET AUG-DZVP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET AUG-DZVP-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
