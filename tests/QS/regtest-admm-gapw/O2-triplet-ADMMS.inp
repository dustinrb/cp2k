&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT O2-triplet-ADMMS
  RUN_TYPE ENERGY
  ! TRACE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME BASIS_ADMM
    LSD
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_SCALING_MODEL MERLOT
      METHOD CHARGE_CONSTRAINED_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 100
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      EPS_FILTER_MATRIX 0.0e0
      EPS_PGF_ORB 1.0E-10
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 5
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-4
        MAX_SCF 5
      &END OUTER_SCF
    &END SCF
    &XC
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-8
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      ! PURE HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 5.000 5.000 5.000
      PERIODIC NONE
    &END CELL
    &COORD
      O       0.000000    0    0
      O       0 0 1.2
    &END COORD
    &KIND O
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
