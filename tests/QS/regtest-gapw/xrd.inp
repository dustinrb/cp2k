&GLOBAL
  PRINT_LEVEL LOW
  PROJECT gapw_all_pade
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &PRINT
      &E_DENSITY_CUBE
        XRD_INTERFACE .TRUE.
      &END E_DENSITY_CUBE
    &END PRINT
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT ON
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      He1 0.0 0.0 0.0
      He2 2.0 0.0 0.0
    &END COORD
    &KIND He1
      BASIS_SET DZVP-ALL-PADE
      ELEMENT He
      POTENTIAL ALL
    &END KIND
    &KIND He2
      BASIS_SET DZVP-GTH-PADE
      ELEMENT He
      POTENTIAL GTH-PADE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
