&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT OF_gapw_all_lsd_LB
  RUN_TYPE WFN_OPT
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ALL_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 80
      NGRIDS 1
      REL_CUTOFF 30
    &END MGRID
    &QS
      ALPHA0_H 10
      EPSFIT 1.E-4
      EPSISO 1.0E-12
      EPSRHO0 1.E-8
      EPSSVD 0.0
      EPS_GVG 1.0E-8
      EPS_PGF_ORB 1.0E-4
      LMAXN0 4
      LMAXN1 6
      METHOD GAPW
      QUADRATURE GC_LOG
    &END QS
    &SCF
      EPS_DIIS 0.4
      EPS_SCF 3.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      DENSITY_CUTOFF 1.0e-11
      &XC_FUNCTIONAL Blyp
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
    &END CELL
    &COORD
      O 0.0     0.0 0.0
      F 1.35427 0.0 0.0
    &END COORD
    &KIND O
      BASIS_SET 6-311ppG3f2d
      LEBEDEV_GRID 30
      POTENTIAL ALL
      RADIAL_GRID 30
    &END KIND
    &KIND F
      BASIS_SET 6-311ppG3f2d
      LEBEDEV_GRID 30
      POTENTIAL ALL
      RADIAL_GRID 30
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
