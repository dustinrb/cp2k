&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT gapw_all_pade
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 3
    TEMPERATURE 300.0
    TIMESTEP 0.2
    &THERMOSTAT
      &NOSE
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION

#CPQA DEPENDS He2-all.inp
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    WFN_RESTART_FILE_NAME RESTART
    &MGRID
      CUTOFF 150
      NGRIDS 1
    &END MGRID
    &QS
      ALPHA0_HARD 10
      EPSFIT 1.E-4
      EPSISO 1.0E-12
      EPSRHO0 1.E-8
      EPSSVD 0.0
      EPS_GVG 1.0E-6
      EPS_PGF_ORB 1.0E-6
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 3
      LMAXN0 2
      LMAXN1 6
      METHOD GAPW
      QUADRATURE GC_LOG
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 10
      SCF_GUESS RESTART
      &OT ON
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      He 0.0 0.0 0.0
      He 2.0 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET DZVP-ALL-PADE
      LEBEDEV_GRID 50
      POTENTIAL ALL
      RADIAL_GRID 150
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
