&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT Ar-ref-1
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE REFTRAJ
    STEPS 2
    # next MD step, overlap matrix will be sparse
    &REFTRAJ
      EVAL ENERGY
      TRAJ_FILE_NAME Ar-ref-1.xyz
    &END REFTRAJ
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 30
      SCF_GUESS atomic
      &OT
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 2.5
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 10
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-7
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &PBE
          SCALE_C 1.0
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    # cell and coords such that the overlap matrix is first dense
    &CELL
      ABC 6.0 6.0 30.0
    &END CELL
    &COORD
      Ar     0.000000  0.000000  0.000000
      Ar     0.000000  0.000000  15.000000
    &END COORD
    &KIND Ar
      BASIS_SET ORB DZVP-GTH-PADE
      BASIS_SET AUX_FIT DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q8
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
