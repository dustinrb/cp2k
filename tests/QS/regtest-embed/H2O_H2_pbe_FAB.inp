! Total system
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_RI_cc-TZ
    POTENTIAL_FILE_NAME HF_POTENTIALS
    &MGRID
      CUTOFF 200
      REL_CUTOFF 20
    &END MGRID
    &POISSON
    &END POISSON
    &PRINT
      &E_DENSITY_CUBE LOW
      &END E_DENSITY_CUBE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
      METHOD GPW
      REF_EMBED_SUBSYS .TRUE.
      &OPT_EMBED
        DENS_CONV_INT 0.12
        DENS_CONV_MAX 0.013
        FAB .TRUE.
        GRID_OPT .TRUE.
        N_ITER 100
        REG_LAMBDA 0.00001
        TRUST_RAD 0.1
        VW_CUTOFF 0.05
        VW_SMOOTH_CUT_RANGE 2.0
      &END OPT_EMBED
    &END QS
    &SCF
      MAX_SCF 200
      SCF_GUESS ATOMIC
      &OT
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 6.000 6.000 6.000
    &END CELL
    &COORD
      O      1.75  1.5  0.0
      H      1.0   1.0  0.0
      H      2.5   1.0  0.0
      H      1.75  3.75  0.0
      H      1.75  4.50 0.0
    &END COORD
    &KIND H
      BASIS_SET cc-TZ
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET cc-TZ
      POTENTIAL GTH-HF-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

