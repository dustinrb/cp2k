&GLOBAL
  #  TRACE
  PRINT_LEVEL MEDIUM
  PROJECT H2O-hybrid-b3lyp
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 250
      REL_CUTOFF 50
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    # These are the coefficients used for B3LYP using VWN5,
    # this is recommended but doesn't match the default Gaussian definition
    &XC
      &HF
        FRACTION 0.20
        &MEMORY
          MAX_MEMORY 5
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &BECKE88
          SCALE_X 0.72
        &END BECKE88
        &LYP
          SCALE_C 0.81
        &END LYP
        &VWN
          FUNCTIONAL_TYPE VWN5
          SCALE_C 0.19
        &END VWN
        &XALPHA
          SCALE_X 0.08
        &END XALPHA
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
