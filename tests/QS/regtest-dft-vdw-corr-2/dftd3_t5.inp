&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT dftd3_t5
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 2
    MINIMIZER BFGS
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 240
      NGRIDS 3
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0e-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          TYPE DFTD3
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      He    1.255 0.0 0.0
      He   -1.255 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
