&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O_mo
  RUN_TYPE RT_PROPAGATION
&END GLOBAL

&MOTION
  &MD
    STEPS 2
    TIMESTEP [au_t] 0.1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    UKS
    &MGRID
      CUTOFF 200
    &END MGRID
    &PRINT
      &MO_CUBES
        NLUMO 1
      &END MO_CUBES
      &WFN_MIX
        OVERWRITE_MOS .TRUE.
        &UPDATE
          ORIG_MO_INDEX 1
          ORIG_SCALE 0.999999
          ORIG_SPIN_INDEX ALPHA
          ORIG_TYPE VIRTUAL
          RESULT_MO_INDEX 1
          RESULT_SCALE 0.0000001
          RESULT_SPIN_INDEX ALPHA
        &END UPDATE
      &END WFN_MIX
    &END PRINT
    &QS
    &END QS
    &REAL_TIME_PROPAGATION
      APPLY_DELTA_PULSE
      COM_NL .FALSE.
      DELTA_PULSE_DIRECTION 1 0 0
      DELTA_PULSE_SCALE 0.1
      DENSITY_PROPAGATION .TRUE.
      EPS_ITER 1.0E-12
      EXP_ACCURACY 1.0E-8
      INITIAL_WFN SCF_WFN  ! RT_RESTART
      MAT_EXP TAYLOR
      MAX_ITER 200
      PERIODIC .FALSE.
      PROPAGATOR ETRS
    &END REAL_TIME_PROPAGATION
    &SCF
      EPS_LUMO 1.0e-9
      EPS_SCF 1.0e-9
      MAX_SCF 1000
      SCF_GUESS ATOMIC
      &OT
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 7 7 7
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
