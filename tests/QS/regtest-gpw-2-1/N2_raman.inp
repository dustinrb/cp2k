&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT N2
  RUN_TYPE VIBRATIONAL_ANALYSIS
&END GLOBAL

&VIBRATIONAL_ANALYSIS
  DX 0.0005
  INTENSITIES .TRUE.
  NPROC_REP 4
&END VIBRATIONAL_ANALYSIS

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &MGRID
      CUTOFF 200
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON MT
    &END POISSON
    &PRINT
      &MOMENTS ON
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
    &END PRINT
    &QS
      EPSFIT 1.0E-06
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 5
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      EPS 1.0E-06
      MAX_ITER 50
      PRECONDITIONER full_single_inverse
      &POLAR on
        DO_RAMAN
        PERIODIC_DIPOLE_OPERATOR F
        &PRINT
          &POLAR_MATRIX on
          &END POLAR_MATRIX
        &END PRINT
      &END POLAR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      N        0.000000    0.000000    0.544742
      N        0.000000    0.000000   -0.544742
    &END COORD
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      MASS 14.00307
      POTENTIAL GTH-PADE-q5
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
