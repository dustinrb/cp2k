&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT kp_GW
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.01
  &END TIMINGS
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    SORT_BASIS EXP
    &MGRID
      CUTOFF 100
      REL_CUTOFF 20
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-15
      METHOD GPW
    &END QS
    &SCF
      ADDED_MOS -1
      EPS_SCF 1.0E-5
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &INTERACTION_POTENTIAL
          OMEGA 0.11
          POTENTIAL_TYPE SHORTRANGE
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 10
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END SCREENING
      &END HF
      &WF_CORRELATION
        &INTEGRALS
          SIZE_LATTICE_SUM 3
        &END INTEGRALS
        &LOW_SCALING
          KPOINTS 1 4 4
          REGULARIZATION_RI 1.0E-3
        &END LOW_SCALING
        &RI_RPA
          RPA_NUM_QUAD_POINTS 6
          &GW
            CORR_OCC 1
            CORR_VIRT 1
            KPOINTS_SELF_ENERGY 2 2 1
            RI_SIGMA_X
            &KPOINT_SET
              NPOINTS 3
              SPECIAL_POINT 0.5 0.0 0.0
              SPECIAL_POINT 0.0 0.0 0.0
            &END KPOINT_SET
          &END GW
        &END RI_RPA
      &END WF_CORRELATION
      &XC_FUNCTIONAL
        &PBE
          SCALE_C 1.0
          SCALE_X 0.0
        &END PBE
        &XWPBE
          OMEGA 0.11
          SCALE_X -0.25
          SCALE_X0 1.0
        &END XWPBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 8.000 8.000 8.000
      MULTIPLE_UNIT_CELL 1 1 1
      PERIODIC YZ
    &END CELL
    &COORD
      H  0.0 -0.5 -4.5
      O  0.5  0.0  4.5
      H  0.0  0.5 -4.5
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
