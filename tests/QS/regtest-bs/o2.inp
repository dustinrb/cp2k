&GLOBAL
  PRINT_LEVEL low
  PROJECT o2
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    LSD
    MULTIPLICITY 3
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 100
      NGRIDS 4
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0e-7
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT
        ENERGY_GAP 0.001
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0e-7
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8 8 8
    &END CELL
    &COORD
      O   0.0 0.0 0.0
      O   1.2 0.0 0.0
    &END COORD
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q6
      #     MAGNETIZATION 1.0
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
