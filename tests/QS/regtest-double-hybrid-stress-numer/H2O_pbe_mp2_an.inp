&GLOBAL
  PRINT_LEVEL LOW
  PROJECT STRESS_RI-MP2
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME HFX_BASIS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      2ND_DERIV_ANALYTICAL .FALSE.
      # Not a very useful functional, just for testing
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        MEMORY 1.00
        NUMBER_PROC 1
        &CANONICAL_GRADIENTS
          EPS_CANONICAL 0.0001
          FREE_HFX_BUFFER .TRUE.
          &CPHF
            EPS_CONV 1.0E-4
            MAX_ITER 30
          &END CPHF
        &END CANONICAL_GRADIENTS
        &INTEGRALS
          &WFC_GPW
            CUTOFF 25
            EPS_FILTER 1.0E-6
            EPS_GRID 1.0E-6
            REL_CUTOFF 10
          &END WFC_GPW
        &END INTEGRALS
        &RI_MP2
          BLOCK_SIZE -1
        &END RI_MP2
      &END WF_CORRELATION
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC [angstrom] 5.0000 5.0000 5.0000
    &END CELL
    &COORD
      O       0.000000    0.000000    -0.211000
      H       0.000000   -0.844000     0.495000
      H       0.000000    0.744000     0.495000
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
