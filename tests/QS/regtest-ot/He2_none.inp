&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT He2_none
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 4
      SCF_GUESS ATOMIC
      &OT
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 4
        OPTIMIZER NONE
        TYPE NONE
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 4.0 4.0
    &END CELL
    &COORD
      He   4.0  2.0 2.0
      He   2.0  2.0 2.0
    &END COORD
    &KIND He
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
