&GLOBAL
  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL medium
  PROJECT test
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &EXCITED_STATES T
      STATE 1
    &END EXCITED_STATES
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-8
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-8
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-7
      KERNEL FULL
      MAX_ITER 100
      NSTATES 1
      RKS_TRIPLETS F
      &PRINT
        &NAMD_PRINT
          PRINT_VIRTUALS T
        &END NAMD_PRINT
      &END PRINT
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      UNIT angstrom
      O   0.000000    0.000000    0.000000
      H   0.000000   -0.757136    0.580545
      H   0.000000    0.757136    0.580545
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-MOLOPT-PBE0-GTH-q1
      POTENTIAL GTH-PBE0-q1
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-MOLOPT-PBE0-GTH-q6
      POTENTIAL GTH-PBE0-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES T
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
