@SET MULTIPLICITY 1
@SET BASIS_SET 6-31G**
@SET BASIS_SET_FILE EMSL_BASIS_SETS
@SET POTENTIAL_FILE POTENTIAL
@SET LSD T
@IF ${MULTIPLICITY}==1
@SET LSD F
@ENDIF
&GLOBAL
  PRINT_LEVEL LOW
  PROJECT he-polar-1
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME ${BASIS_SET_FILE}
    LSD ${LSD}
    MULTIPLICITY ${MULTIPLICITY}
    POTENTIAL_FILE_NAME ${POTENTIAL_FILE}
    &MGRID
      COMMENSURATE
      CUTOFF 100
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 5
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &XALPHA
        &END XALPHA
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      EPS 1E-6
      MAX_ITER 10
      PRECONDITIONER FULL_ALL
      RESTART_EVERY 10
      &CURRENT
      &END CURRENT
      &LOCALIZE
        MAX_ITER 5
      &END LOCALIZE
      &SPINSPIN
        #THIS IS A HACK SO FAR, compute polarizability for debugging only.
        DO_DSO T
        DO_FC F
        DO_PSO F
        DO_SD F
      &END SPINSPIN
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      He   0.000000    0.000000    0.000000
    &END COORD
    &KIND He
      BASIS_SET ${BASIS_SET}
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
