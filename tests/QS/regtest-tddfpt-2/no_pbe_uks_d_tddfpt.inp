&GLOBAL
  PRINT_LEVEL low
  PROJECT no_pbe_uks_d_tddfpt
  RUN_TYPE energy
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    UKS .true.
    &MGRID
      CUTOFF 200
    &END MGRID
    &POISSON
      PERIODIC none
      POISSON_SOLVER wavelet
    &END POISSON
    &QS
      METHOD gpw
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 30
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL pbe
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-3
      MAX_ITER 10
      NSTATES 3
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      N   0.000000    0.300000   -0.619815
      O   0.100000    0.000000    0.542338
    &END COORD
    &KIND O
      BASIS_SET aug-TZV2P-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND N
      BASIS_SET aug-TZV2P-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
