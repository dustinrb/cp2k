&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  ELECTRON_CONFIGURATION 1s2
  ELEMENT He
  MAX_ANGULAR_MOMENTUM 0
  RUN_TYPE BASIS_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 3 0 0 0
    S_EXPONENTS 1.5 1.5 1.5
    S_QUANTUM_NUMBERS 1 2 3
  &END AE_BASIS
  &METHOD
    METHOD_TYPE HARTREE-FOCK
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END OPTIMIZATION
  &POWELL
    ACCURACY 1.e-14
    STEP_SIZE 0.01
  &END POWELL
&END ATOM
