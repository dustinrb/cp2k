&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE none
  ELECTRON_CONFIGURATION 1s2
  ELEMENT He
  MAX_ANGULAR_MOMENTUM 0
  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 1 0 0 0
    S_EXPONENTS 1.6875
    S_QUANTUM_NUMBERS 1
  &END AE_BASIS
  &METHOD
    METHOD_TYPE KOHN-SHAM
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-10
  &END OPTIMIZATION
  &POTENTIAL
    POTENTIAL_NAME GTH-PADE-q2
    PSEUDO_TYPE GTH
  &END POTENTIAL
  &POWELL
    ACCURACY 1.e-10
    STEP_SIZE 0.1
  &END POWELL
  &PP_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 1 0 0 0
    S_EXPONENTS 1.6875
    S_QUANTUM_NUMBERS 1
  &END PP_BASIS
&END ATOM
