&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  ELECTRON_CONFIGURATION [He] 2s2 2p2
  ELEMENT C
  MAX_ANGULAR_MOMENTUM 2
  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
  &END AE_BASIS
  &METHOD
    METHOD_TYPE KOHN-SHAM
    RELATIVISTIC DKH(2)
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-6
  &END OPTIMIZATION
  &POTENTIAL
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
      2    2    0    0
      0.350000000       2   -9.000000000    1.500000000
      1
      0.300000000       1    9.000000000
    &END GTH_POTENTIAL
  &END POTENTIAL
  &POWELL
    ACCURACY 1.e-8
    STEP_SIZE 1.0
    WEIGHT_PSIR0 0.1
  &END POWELL
  &PP_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 1 1 0 0
    P_EXPONENTS 1.5679
    P_QUANTUM_NUMBERS 2
    S_EXPONENTS 1.6083
    S_QUANTUM_NUMBERS 2
  &END PP_BASIS
  &PRINT
    &BASIS_SET
    &END BASIS_SET
  &END PRINT
&END ATOM
