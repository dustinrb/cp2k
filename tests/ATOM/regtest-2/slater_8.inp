&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  ELECTRON_CONFIGURATION CORE 2s1
  ELEMENT Li
  MAX_ANGULAR_MOMENTUM 0
  RUN_TYPE BASIS_OPTIMIZATION
  &METHOD
    METHOD_TYPE KOHN-SHAM
    &XC
      &XC_FUNCTIONAL
        &PBE
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END OPTIMIZATION
  &POTENTIAL
    POTENTIAL_NAME GTH-PADE-q1
    PSEUDO_TYPE GTH
  &END POTENTIAL
  &POWELL
    ACCURACY 1.e-14
    STEP_SIZE 0.1
  &END POWELL
  &PP_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 1 0 0 0
    S_EXPONENTS 0.7
    S_QUANTUM_NUMBERS 2
  &END PP_BASIS
&END ATOM
