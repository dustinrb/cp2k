&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  ELECTRON_CONFIGURATION CORE 2s2 2p2
  ELEMENT C
  MAX_ANGULAR_MOMENTUM 3
  RUN_TYPE ENERGY
  &METHOD
    METHOD_TYPE KOHN-SHAM
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &POTENTIAL
    CONFINEMENT 200. 4.0 12.0
    CONFINEMENT_TYPE BARRIER
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
      2    2    0    0
      0.33842037096913       2   -8.80041712690571    1.33249221738633
      1
      0.30268766321861       1    9.60946227253083
    &END GTH_POTENTIAL
  &END POTENTIAL
  &POWELL
    ACCURACY 1.e-14
    STEP_SIZE 0.20
  &END POWELL
  &PRINT
    &GEOMETRICAL_RESPONSE_BASIS
      CONFINEMENT 8.0
      EXTENSION_BASIS 2 1
      NAME_BODY GRB-q4
      NUM_GTO_CORE 6
      NUM_GTO_EXTENDED 4
      NUM_GTO_POLARIZATION 4
    &END GEOMETRICAL_RESPONSE_BASIS
  &END PRINT
&END ATOM
