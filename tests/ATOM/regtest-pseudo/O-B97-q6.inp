&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  COULOMB_INTEGRALS ANALYTIC
  ELECTRON_CONFIGURATION [He] 2s2 2p4
  ELEMENT O
  EXCHANGE_INTEGRALS ANALYTIC
  MAX_ANGULAR_MOMENTUM 2
  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
    GRID_POINTS 100
  &END AE_BASIS
  &METHOD
    METHOD_TYPE KOHN-SHAM
    RELATIVISTIC DKH(2)
    &XC
      &XC_FUNCTIONAL
        &BECKE97
          PARAMETRIZATION B97GRIMME
        &END BECKE97
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-10
  &END OPTIMIZATION
  &POTENTIAL
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
      2    4    0    0
      0.241474531885       2  -16.691805741058    2.494605958440
      1
      0.220838245905       1   18.355844903927
    &END GTH_POTENTIAL
  &END POTENTIAL
  &POWELL
    ! ACCURACY   1.e-12
    ACCURACY 1.e-0
    STEP_SIZE 0.25
    WEIGHT_PSIR0 0.1
  &END POWELL
  &PP_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
  &END PP_BASIS
  &PRINT
    &BASIS_SET
    &END BASIS_SET
  &END PRINT
&END ATOM
