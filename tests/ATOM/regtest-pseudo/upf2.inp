&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  ELECTRON_CONFIGURATION CORE 2s2 2p2
  ELEMENT C
  MAX_ANGULAR_MOMENTUM 1
  RUN_TYPE ENERGY
  &METHOD
    METHOD_TYPE KOHN-SHAM
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-6
    MAX_ITER 100
  &END OPTIMIZATION
  &POTENTIAL
    POTENTIAL_FILE_NAME C.pbe-mt_fhi.UPF
    PSEUDO_TYPE UPF
  &END POTENTIAL
  &PRINT
    &SEPARABLE_GAUSSIAN_PSEUDO
    &END SEPARABLE_GAUSSIAN_PSEUDO
  &END PRINT
&END ATOM
