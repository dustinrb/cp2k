&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE [He]
  COULOMB_INTEGRALS ANALYTIC
  ELECTRON_CONFIGURATION [He] 2s2 2p4
  ELEMENT O
  EXCHANGE_INTEGRALS ANALYTIC
  MAX_ANGULAR_MOMENTUM 2
  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
    GRID_POINTS 200
  &END AE_BASIS
  &METHOD
    METHOD_TYPE KOHN-SHAM
    RELATIVISTIC DKH(2)
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-05
  &END OPTIMIZATION
  &POTENTIAL
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
      2    4
      0.24455430    2   -16.66721480     2.48731132
      2
      0.22095592    1    18.33745811
      0.21133247    0
    &END GTH_POTENTIAL
  &END POTENTIAL
  &POWELL
    ! ACCURACY   1.e-10
    ACCURACY 1.e-0
    STEP_SIZE 0.5
    WEIGHT_PSIR0 0.1
  &END POWELL
  &PP_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
    GRID_POINTS 200
  &END PP_BASIS
  &PRINT
    &BASIS_SET
    &END BASIS_SET
  &END PRINT
&END ATOM
