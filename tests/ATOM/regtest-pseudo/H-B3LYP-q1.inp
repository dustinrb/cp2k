&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL

&ATOM
  CORE none
  COULOMB_INTEGRALS ANALYTIC
  ELECTRON_CONFIGURATION 1s1
  ELEMENT H
  EXCHANGE_INTEGRALS ANALYTIC
  MAX_ANGULAR_MOMENTUM 2
  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION
  &AE_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
    GRID_POINTS 200
  &END AE_BASIS
  &METHOD
    METHOD_TYPE KOHN-SHAM
    RELATIVISTIC DKH(2)
    &XC
      &XC_FUNCTIONAL B3LYP
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-10
  &END OPTIMIZATION
  &POTENTIAL
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
      1
      0.20000000    2    -4.19596147     0.73049821
      0
    &END GTH_POTENTIAL
  &END POTENTIAL
  &POWELL
    ! ACCURACY   1.e-10
    ACCURACY 1.e-0
    STEP_SIZE 0.5
  &END POWELL
  &PP_BASIS
    BASIS_TYPE GEOMETRICAL_GTO
  &END PP_BASIS
&END ATOM
