&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Solv_alch_chng_dist
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &FREE_ENERGY
    METHOD AC
    &ALCHEMICAL_CHANGE
      PARAMETER k
    &END ALCHEMICAL_CHANGE
  &END FREE_ENERGY
  &MD
    ENSEMBLE NVE
    STEPS 20
    TEMPERATURE 200.0
    TIMESTEP 0.5
    &PRINT
      &ENERGY
        &EACH
          MD 1
        &END EACH
      &END ENERGY
    &END PRINT
  &END MD
  &PRINT
    &FORCES OFF
    &END FORCES
    &RESTART
      &EACH
        MD 10
      &END EACH
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
    &TRAJECTORY
      &EACH
        MD 100
      &END EACH
    &END TRAJECTORY
    &VELOCITIES OFF
    &END VELOCITIES
  &END PRINT
&END MOTION

&MULTIPLE_FORCE_EVALS
  FORCE_EVAL_ORDER 2 3
  MULTIPLE_SUBSYS T
&END MULTIPLE_FORCE_EVALS

&FORCE_EVAL
  METHOD MIXED
  &MIXED
    GROUP_PARTITION 1 1
    MIXING_TYPE GENMIX
    &GENERIC
      # X: Energy force_eval 2
      # Y: Energy force_eval 3
      MIXING_FUNCTION k*X+(1.0-k)*Y
      PARAMETERS k
      VALUES 0.5
      VARIABLES X Y
    &END GENERIC
    &MAPPING
      &FORCE_EVAL 1
        &FRAGMENT 1
          1 6
          MAP 1
        &END FRAGMENT
        &FRAGMENT 2
          7 16
          MAP 2
        &END FRAGMENT
        &FRAGMENT 3
          17 22
          MAP 3
        &END FRAGMENT
        &FRAGMENT 4
          23 1840
          MAP 5
        &END FRAGMENT
      &END FORCE_EVAL
      &FORCE_EVAL 2
        &FRAGMENT 1
          1 6
          MAP 1
        &END FRAGMENT
        &FRAGMENT 2
          7 17
          MAP 4
        &END FRAGMENT
        &FRAGMENT 3
          18 23
          MAP 3
        &END FRAGMENT
        &FRAGMENT 4
          24 1841
          MAP 5
        &END FRAGMENT
      &END FORCE_EVAL
      &FORCE_EVAL_MIXED
        &FRAGMENT 1
          1 6
        &END FRAGMENT
        &FRAGMENT 2
          7 16
        &END FRAGMENT
        &FRAGMENT 3
          17 22
        &END FRAGMENT
        &FRAGMENT 4
          23 33
        &END FRAGMENT
        &FRAGMENT 5
          34 1851
        &END FRAGMENT
      &END FORCE_EVAL_MIXED
    &END MAPPING
  &END MIXED
  &SUBSYS
    &CELL
      ABC 30.9751780 30.8599250 30.7278700
    &END CELL
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE PDB
      COORD_FILE_NAME full.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ala.pot
      &SPLINE
        EMAX_SPLINE 100000000.0
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .5
        EWALD_TYPE spme
        GMAX 36
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 30.9751780 30.8599250 30.7278700
    &END CELL
    &TOPOLOGY
      CONNECTIVITY PSF
      CONN_FILE_NAME ala.psf
      COORDINATE PDB
      COORD_FILE_NAME ala.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

