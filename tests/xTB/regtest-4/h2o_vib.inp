&GLOBAL
  PRINT_LEVEL LOW
  PROJECT h2oVib
  RUN_TYPE VIBRATIONAL_ANALYSIS
&END GLOBAL

&VIBRATIONAL_ANALYSIS
  DX 0.001
  INTENSITIES .TRUE.
  NPROC_REP 1
&END VIBRATIONAL_ANALYSIS

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PRINT
      &MOMENTS ON
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
    &END PRINT
    &QS
      METHOD xTB
    &END QS
    &SCF
      EPS_SCF 1.0E-8
      MAX_SCF 10
      SCF_GUESS MOPAC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-8
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 6 6 6
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
