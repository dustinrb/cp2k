@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &KPOINTS
      SCHEME MONKHORST-PACK 2 2 2
    &END KPOINTS
    &PRINT
      &ENERGY_WINDOWS
        N_WINDOWS 10
        PRINT_CUBES
        RANGE 0.4
        RESTRICT_RANGE
      &END ENERGY_WINDOWS
      &LOWDIN
      &END LOWDIN
      &MO
        CARTESIAN T
        EIGENVALUES T
        EIGENVECTORS T
        OCCUPATION_NUMBERS T
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
      &MOMENTS
        MAGNETIC T
        MAX_MOMENT 1
        PERIODIC T
        REFERENCE COM
      &END MOMENTS
      &MULLIKEN
      &END MULLIKEN
      &OVERLAP_CONDITION
        1-NORM T
        ARNOLDI T
        DIAGONALIZATION T
      &END OVERLAP_CONDITION
    &END PRINT
    &QS
      METHOD xTB
      &XTB
        DO_EWALD T
      &END XTB
    &END QS
    &SCF
      ADDED_MOS 100
      EPS_SCF 1.e-6
      MAX_SCF 100
      SCF_GUESS MOPAC
      &MIXING
        ALPHA 0.40
        METHOD BROYDEN_MIXING
        NBUFFER 10
      &END MIXING
      &SMEAR
        ELECTRONIC_TEMPERATURE 1000
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
      SCALED
      Si     0.000000    0.000000    0.000000
      Si     0.490000    0.500000    0.000000
      Si     0.500000    0.000000    0.500000
      Si     0.000000    0.500000    0.500000
      Si     0.255000    0.250000    0.250000
      Si     0.250000    0.755000    0.750000
      Si     0.750000    0.250000    0.755000
      Si     0.750000    0.750000    0.255000
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Si
  RUN_TYPE ENERGY
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_DR 0.0001
    MAX_FORCE 0.00001
    MAX_ITER 2
    OPTIMIZER LBFGS
    RMS_DR 0.00003
    RMS_FORCE 0.000003
  &END GEO_OPT
&END MOTION
