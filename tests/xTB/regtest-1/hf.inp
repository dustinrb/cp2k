@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &KPOINTS
      #SCHEME  NONE
      SCHEME GAMMA
      #SCHEME  MONKHORST-PACK  1 1 1
    &END KPOINTS
    &POISSON
      &EWALD
        ALPHA 10.0
        EWALD_TYPE SPME
        GMAX 75
      &END EWALD
    &END POISSON
    &QS
      METHOD xTB
      &XTB
        COULOMB_INTERACTION T
        DO_EWALD T
        HYDROGEN_STO_NG 4
        STO_NG 6
        TB3_INTERACTION T
        &PARAMETER
          DISPERSION_PARAMETER_FILE dftd3.dat
        &END PARAMETER
      &END XTB
    &END QS
    &SCF
      EPS_SCF 1.e-7
      MAX_SCF 100
      SCF_GUESS MOPAC
      &MIXING
        ALPHA 0.40
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
      H     0.000000    0.000000    0.000000
      F     0.980000    0.000000    0.000000
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  #RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES F
  DEBUG_STRESS_TENSOR T
  DX 0.002
  EPS_NO_ERROR_CHECK 0.000001
  STOP_ON_MISMATCH T
&END DEBUG
