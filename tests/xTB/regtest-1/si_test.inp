@SET NREP 2
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &POISSON
      &EWALD
        ALPHA 1.0
        EWALD_TYPE SPME
        GMAX 25
      &END EWALD
    &END POISSON
    &QS
      METHOD xTB
      &XTB
        DO_EWALD T
        &PARAMETER
          DISPERSION_PARAMETER_FILE dftd3.dat
        &END PARAMETER
      &END XTB
    &END QS
    &SCF
      EPS_SCF 1.e-5
      MAX_SCF 100
      SCF_GUESS MOPAC
      &MIXING
        ALPHA 0.40
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
      SCALED
      Si     0.000000    0.000000    0.000000
      Si     0.490000    0.500000    0.000000
      Si     0.500000    0.000000    0.500000
      Si     0.000000    0.500000    0.500000
      Si     0.255000    0.250000    0.250000
      Si     0.250000    0.755000    0.750000
      Si     0.750000    0.250000    0.755000
      Si     0.750000    0.750000    0.255000
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Si
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES F
  DEBUG_STRESS_TENSOR T
  DX 0.001
  EPS_NO_ERROR_CHECK 0.000001
  STOP_ON_MISMATCH T
&END DEBUG
