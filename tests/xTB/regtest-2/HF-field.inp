&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HF-field
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PERIODIC_EFIELD
      INTENSITY 0.05
      POLARISATION 0 0 1
    &END PERIODIC_EFIELD
    &POISSON
      &EWALD
        ALPHA 1.0
        EWALD_TYPE SPME
        GMAX 75
      &END EWALD
    &END POISSON
    &PRINT
      &DERIVATIVES
      &END DERIVATIVES
      &MOMENTS
        PERIODIC T
      &END MOMENTS
    &END PRINT
    &QS
      METHOD xTB
      &XTB
        DO_EWALD T
      &END XTB
    &END QS
    &SCF
      EPS_SCF 1.e-8
      MAX_SCF 90
      &OT ON
        LINESEARCH 3PNT
        MINIMIZER DIIS
        PRECONDITIONER FULL_S_INVERSE
        STEPSIZE 0.1
      &END OT
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      F   0.000000    0.000000    0.000000
      H   0.000000    0.000000    0.970000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
