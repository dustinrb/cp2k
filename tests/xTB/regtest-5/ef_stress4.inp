&GLOBAL
  PRINT_LEVEL low
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES yes
  DEBUG_STRESS_TENSOR yes
  DX 1.E-3
  EPS_NO_ERROR_CHECK 1.0E-4
  STOP_ON_MISMATCH yes
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR analytical
  &DFT
    LSD
    &PERIODIC_EFIELD
      INTENSITY 0.005
      POLARISATION 1 1 1
    &END PERIODIC_EFIELD
    &QS
      EPS_DEFAULT 1.0E-14
      EXTRAPOLATION USE_PREV_P
      METHOD xTB
      &XTB
        DO_EWALD T
      &END XTB
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 100
      &MIXING
        ALPHA 0.15
        METHOD DIRECT_P_MIXING
      &END MIXING
    &END SCF
  &END DFT
  &PRINT
    &STRESS_TENSOR ON
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC 4.0000 4.0000 4.0000
    &END CELL
    &COORD
      O     0.051368    0.000000    0.000000
      C     1.278612    0.000000    0.000000
      H     1.870460    0.939607    0.000000
      H     1.870460   -0.939607    0.000000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
