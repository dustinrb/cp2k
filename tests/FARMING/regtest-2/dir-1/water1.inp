&GLOBAL
  PRINT_LEVEL LOW
  PROJECT water1
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &QS
      METHOD xTB
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      MAX_SCF 50
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-4
        MAX_SCF 20
      &END OUTER_SCF
    &END SCF
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-6
      KERNEL sTDA
      MAX_ITER 50
      NSTATES 5
      RKS_TRIPLETS F
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000    0.000000
      H   0.000000   -0.757136    0.580545
      H   0.000000    0.757136    0.580545
    &END COORD
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
