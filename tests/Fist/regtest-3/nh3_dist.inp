&GLOBAL
  PRINT_LEVEL LOW
  PROJECT nh3_dist
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      MOLECULE 1
      TARGET 1.9275
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 2
      MOLECULE 1
      TARGET 1.9275
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 3
      MOLECULE 1
      TARGET 1.9275
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 4
      MOLECULE 1
      TARGET 3.1483
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 5
      MOLECULE 1
      TARGET 3.1483
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 6
      MOLECULE 1
      TARGET 3.1483
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVT
    STEPS 5
    TEMPERATURE 298
    TIMESTEP 2.5
    &THERMOSTAT
      REGION MOLECULE
      &NOSE
        LENGTH 1
        MTS 2
        TIMECON 500
        YOSHIDA 3
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/charmm.pot
      &CHARGE
        ATOM NH3
        CHARGE -1.14
      &END CHARGE
      &CHARGE
        ATOM HC
        CHARGE 0.38
      &END CHARGE
      &SPLINE
        RCUT_NB 6.9
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .5
        EWALD_TYPE ewald
        GMAX 21
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 13.858 13.858 13.858
    &END CELL
    &COLVAR
      &DISTANCE
        ATOMS 1 2
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 1 3
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 1 4
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 2 3
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 2 4
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 3 4
      &END DISTANCE
    &END COLVAR
    &TOPOLOGY
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/NH3.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
