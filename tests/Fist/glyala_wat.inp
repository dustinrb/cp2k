&GLOBAL
  PRINT_LEVEL LOW
  PROJECT glyala_wat
  RUN_TYPE debug
&END GLOBAL

&DEBUG
&END DEBUG

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 298
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME sample_pot/charmm.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORDINATE PDB
      COORD_FILE_NAME sample_pdb/glyala_wat.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
