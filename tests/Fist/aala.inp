&GLOBAL
  PRINT_LEVEL LOW
  PROJECT aala
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 500
    OPTIMIZER CG
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME sample_pot/aala.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE SPME
        GMAX 20
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 20 20 20
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORDINATE PDB
      COORD_FILE_NAME sample_pdb/aala.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
