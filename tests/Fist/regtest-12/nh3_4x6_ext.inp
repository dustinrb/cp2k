&GLOBAL
  PRINT_LEVEL LOW
  PROJECT nh3_4x6_ext
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &CONSTRAINT
    &G4X6
      ATOMS 1 2 3 4
      DISTANCES 1.9275 1.9275 1.9275 3.1483 3.1483 3.1483
      INTERMOLECULAR
    &END G4X6
  &END CONSTRAINT
  &MD
    ENSEMBLE NVT
    STEPS 5
    TEMPERATURE 298
    TIMESTEP 2.5
    &THERMOSTAT
      REGION GLOBAL
      &NOSE
        LENGTH 1
        MTS 2
        TIMECON 500
        YOSHIDA 3
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/charmm.pot
      &CHARGE
        ATOM NH3
        CHARGE -1.14
      &END CHARGE
      &CHARGE
        ATOM HC
        CHARGE 0.38
      &END CHARGE
      &SPLINE
        RCUT_NB 6.9
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .5
        EWALD_TYPE ewald
        GMAX 21
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 13.858 13.858 13.858
    &END CELL
    &TOPOLOGY
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/NH3.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
