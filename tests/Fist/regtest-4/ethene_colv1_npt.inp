&GLOBAL
  PROJECT ethene_colv1_npt
  RUN_TYPE md
&END GLOBAL

&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      MOLECULE 1
      TARGET 2.09433
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 2
      MOLECULE 1
      TARGET 2.09433
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NPT_I
    STEPS 50
    TEMPERATURE 298
    TIMESTEP 2.5
    &BAROSTAT
    &END BAROSTAT
    &THERMOSTAT
      &NOSE
        LENGTH 1
        MTS 2
        TIMECON 500
        YOSHIDA 3
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  STRESS_TENSOR ANALYTICAL
  &MM
