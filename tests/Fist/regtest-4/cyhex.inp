&GLOBAL
  PRINT_LEVEL DEBUG
  PROJECT cyhex
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 0.0
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/cyhex.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 50.0 50.0 50.0
    &END CELL
    &PRINT
      &TOPOLOGY_INFO
        UTIL_INFO
      &END TOPOLOGY_INFO
    &END PRINT
    &TOPOLOGY
      CHARGE_BETA
      CONNECTIVITY UPSF
      CONN_FILE_NAME ../sample_psf/cyhex.psf
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/cyhex.pdb
      EXCLUDE_EI 1-3
      EXCLUDE_VDW 1-3
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
