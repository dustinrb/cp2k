&GLOBAL
  PRINT_LEVEL LOW
  PROJECT NH3_OPT_R
  RUN_TYPE GEO_OPT
&END GLOBAL

&EXT_RESTART
  RESTART_FILE_NAME NH3_OPT-1.restart
&END EXT_RESTART

&MOTION
  &GEO_OPT
    MAX_ITER 50
    OPTIMIZER BFGS
    &BFGS
      RESTART_FILE_NAME NH3_OPT-BFGS.Hessian
      RESTART_HESSIAN
      &RESTART
      &END RESTART
    &END BFGS
  &END GEO_OPT
&END MOTION

#CPQA DEPENDS nh3_bfgs.inp
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/charmm.pot
      &CHARGE
        ATOM NH3
        CHARGE -1.14
      &END CHARGE
      &CHARGE
        ATOM HC
        CHARGE 0.38
      &END CHARGE
      &SPLINE
        RCUT_NB 6.9
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .5
        EWALD_TYPE ewald
        GMAX 21
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 13.858 13.858 13.858
    &END CELL
    &TOPOLOGY
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/NH3_1.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
