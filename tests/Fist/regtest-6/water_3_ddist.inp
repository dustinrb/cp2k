&GLOBAL
  PROJECT water_3_ddist
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      INTERMOLECULAR
      TARGET -3.78
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 298
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/water.pot
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
      &SPLINE
        EMAX_SPLINE 1.0
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE pme
        NS_MAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &COLVAR
      &DISTANCE_FUNCTION
        ATOMS 4 6 6 1
        COEFFICIENT -1.00000
        # distance 1 = ( 4 - 6 )
        # distance 2 = ( 6 - 1 )
      &END DISTANCE_FUNCTION
    &END COLVAR
    &TOPOLOGY
      COORDINATE xyz
      COORD_FILE_NAME ../sample_xyz/water_2.xyz
      &GENERATE
        CREATE_MOLECULES
        REORDER
      &END GENERATE
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
