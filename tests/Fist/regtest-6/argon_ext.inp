&GLOBAL
  PROJECT argon_ext
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 100
    TEMPERATURE 85.0
    TIMESTEP 1.
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &EXTERNAL_POTENTIAL
    FUNCTION (X-0.1)^2+(Y+0.1)^2
  &END EXTERNAL_POTENTIAL
  &MM
    &FORCEFIELD
      &CHARGE
        ATOM Ar
        CHARGE 0.0
      &END CHARGE
      &NONBONDED
        &LENNARD-JONES
          ATOMS Ar Ar
          EPSILON 119.8
          RCUT 8.4
          SIGMA 3.405
        &END LENNARD-JONES
      &END NONBONDED
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE none
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
      Ar 0.0 0.0 0.0
    &END COORD
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
