&GLOBAL
  PRINT_LEVEL LOW
  PROJECT arginine0
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 298
    TEMP_TOL 298
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/arginine.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
    &PRINT
      &FF_INFO
        SPLINE_INFO
      &END FF_INFO
    &END PRINT
  &END MM
  &SUBSYS
    &CELL
      ABC 30.0 30.0 30.0
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/arginine.pdb
      &DUMP_PDB
      &END DUMP_PDB
      &DUMP_PSF
      &END DUMP_PSF
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
