@SET INDEX 1
&GLOBAL
  PRINT_LEVEL LOW
  PROJECT c60_pl_pl_angl2_restr
  RUN_TYPE md
&END GLOBAL

&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      INTERMOLECULAR
      TARGET [deg] 10.0
      &RESTRAINT
        K [kcalmol] 10.0
      &END RESTRAINT
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVT
    STEPS 200
    TEMPERATURE 300.0
    TIMESTEP 1.0
    &PRINT
      &ENERGY
        &EACH
          MD ${INDEX}
        &END EACH
      &END ENERGY
      &PROGRAM_RUN_INFO
        &EACH
          MD ${INDEX}
        &END EACH
      &END PROGRAM_RUN_INFO
    &END PRINT
    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON 20.
      &END CSVR
    &END THERMOSTAT
  &END MD
  &PRINT
    &RESTART OFF
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
    &TRAJECTORY
      &EACH
        MD ${INDEX}
      &END EACH
    &END TRAJECTORY
    &VELOCITIES OFF
    &END VELOCITIES
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      &NONBONDED
        &TERSOFF
          A 1.3936E3
          ALPHA 0.00
          ATOMS C C
          B 3.467E2
          BETA 1.5724E-7
          BIGD 0.15
          BIGR 1.95
          C 3.8049E4
          D 4.384
          H -5.7058E-1
          LAMBDA1 3.4879
          LAMBDA2 2.2119
          LAMBDA3 0.0000
          N 7.2751E-1
        &END TERSOFF
      &END NONBONDED
      &SPLINE
        EPS_SPLINE 1.E-6
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE none
      &END EWALD
    &END POISSON
  &END MM
  &PRINT
    &PROGRAM_RUN_INFO
      &EACH
        MD ${INDEX}
      &END EACH
    &END PROGRAM_RUN_INFO
  &END PRINT
  &SUBSYS
    &CELL
      ABC 30. 30. 30.
    &END CELL
    # COLVARS
    &COLVAR
      &ANGLE_PLANE_PLANE
        &PLANE
          ATOMS 2 4 5
          DEF_TYPE ATOMS
        &END PLANE
        &PLANE
          ATOMS 32 34 35
          DEF_TYPE ATOMS
        &END PLANE
      &END ANGLE_PLANE_PLANE
    &END COLVAR
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/c60.xyz
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
