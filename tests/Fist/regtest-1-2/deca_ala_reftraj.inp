&GLOBAL
  PRINT_LEVEL LOW
  PROJECT deca_ala_ref
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE REFTRAJ
    STEPS 11
    &REFTRAJ
      EVAL ENERGY
      TRAJ_FILE_NAME deca_ala3-pos-1.xyz
    &END REFTRAJ
  &END MD
  &PRINT
    &TRAJECTORY
      FILENAME =reftraj1.xyz
    &END TRAJECTORY
  &END PRINT
&END MOTION

#CPQA DEPENDS deca_ala3.inp
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/deca_ala.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 50.0 50.0 50.0
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORDINATE PDB
      COORD_FILE_NAME ../sample_pdb/deca_ala.pdb
      PARA_RES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
