&GLOBAL
  PROJECT water_intern
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 3
    TEMPERATURE 298
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      DO_NONBONDED F
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/water.pot
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE none
      &END EWALD
    &END POISSON
    &PRINT
      &DERIVATIVES
      &END DERIVATIVES
    &END PRINT
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &TOPOLOGY
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/water_1.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
