&GLOBAL
  PROJECT water_3_g3x3
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &CONSTRAINT
    &G3X3
      ATOMS 1 2 3
      DISTANCES 1.8897268 1.8897268 3.0859239
      MOLECULE 1
    &END G3X3
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 298
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/water.pot
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE pme
        NS_MAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &TOPOLOGY
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/water_2.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
