&GLOBAL
  PROJECT butane
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 100
    TEMPERATURE 300
    TIMESTEP 2.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/butane.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE spme
        GMAX 24
        O_SPLINE 6
      &END EWALD
    &END POISSON
    &PRINT
      &NEIGHBOR_LISTS
      &END NEIGHBOR_LISTS
    &END PRINT
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/butane.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
