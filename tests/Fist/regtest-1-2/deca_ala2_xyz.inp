&GLOBAL
  PRINT_LEVEL HIGH
  PROJECT deca_ala2_xyz
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 10
    TEMPERATURE 298
    TIMESTEP 2.5
  &END MD
&END MOTION

#CPQA DEPENDS deca_ala2.inp
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/deca_ala.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 50.0 50.0 50.0
    &END CELL
    &KIND CXX
      ELEMENT C
    &END KIND
    &TOPOLOGY
      CHARGE_BETA
      CONNECTIVITY UPSF
      CONN_FILE_NAME ../sample_psf/deca_ala2.psf
      COORDINATE XYZ
      COORD_FILE_NAME deca_ala2.xyz
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
