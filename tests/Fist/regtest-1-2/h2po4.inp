&GLOBAL
  PROJECT h2po4
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TEMPERATURE 300
    TIMESTEP 1.0
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../sample_pot/h2po4.pot
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .44
        EWALD_TYPE spme
        GMAX 32
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.1317 24.1317 24.1317
    &END CELL
    &TOPOLOGY
      CONNECTIVITY UPSF
      CONN_FILE_NAME ../sample_psf/h2po4.psf
      COORDINATE pdb
      COORD_FILE_NAME ../sample_pdb/h2po4.pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
